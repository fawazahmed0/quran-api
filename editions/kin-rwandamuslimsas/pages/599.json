{
    "pages": [
        {
            "chapter": 98,
            "verse": 8,
            "text": "Ibihembo byabo kwa Nyagasani wabo bizaba Ijuru rihoraho, ritembamo imigezi; (iryo Juru) bazaribamo ubuziraherezo. Allah yarabishimiye na bo baramwishimira. Ibyo (bihembo) ni iby’utinya Nyagasani we"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Ubwo isi izatigiswa n’umutingito ukomeye"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Nuko isi igasohora imitwaro yayo (ibiyirimo)"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Umuntu azavuga ati “Ese noneho (isi) yabaye iki?”"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Uwo munsi (isi) izavuga inkuru zayo (z’ibyayibereyeho)"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Kubera ko Nyagasani wawe azaba yayibitegetse"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "Kuri uwo munsi, abantu bazasohoka (mu mva) batatanye kugira ngo berekwe ibikorwa byabo"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Icyo gihe uzaba yarakoze icyiza gifite uburemere bungana n’akantu gato cyane kurusha ibindi, azakibona (agihemberwe)"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "N’uzaba yarakoze ikibi gifite uburemere bungana n’akantu gato cyane kurusha ibindi, azakibona (agihanirwe)"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Ndahiye amafarasi yiruka cyane avuza imirindi"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "Akubita (ibinono) bigatarutsa ibishashi by’umuriro"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "N’amafarasi agaba igitero mu rukerera"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Akanatumura umukungugu"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Akinjira hagati mu ngabo z’umwanzi"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Mu by’ukuri umuntu ni indashima kuri Nyagasani we"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Kandi rwose ibyo yabibera umuhamya"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Ndetse akunda imitungo bikabije"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Ese ntazi ko hari igihe abari mu mva bazazurwa"
        }
    ]
}