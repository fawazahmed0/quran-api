{
    "pages": [
        {
            "chapter": 103,
            "verse": 1,
            "text": "Ndahiye igihe"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Mu by’ukuri umuntu ari mu gihombo"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Uretse abemeye bagakora ibikorwa byiza, bakagirana inama z’ukuri kandi bakanagirana inama zo kwihangana"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Ibihano bikomeye bizaba kuri buri wese unegura abandi, usebanya"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Urundanya imitungo agahora ayibara"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Yibwira ko umutungo we uzatuma abaho ubuziraherezo"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Oya! Mu by’ukuri azajugunywa mu muriro witwa Hutwama (ushwanyaguza)"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Ni iki kizakumenyesha Hutwama"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Ni umuriro wa Allah wenyegejwe"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "(Uwo muriro) uzajya uzamuka ugere ku mitima (y’abazaba bawurimo)"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Mu by’ukuri bazaba bawufungiwemo"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "(Baziritse) ku nkingi ndende (kugira ngo batawusohokamo)"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Ese (yewe Muhamadi) ntiwamenye uko Nyagasani wawe yagize abagabye igitero bari ku nzovu (baje gusenya ingoro ya al Kaabat iri i Maka)"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Ese umugambi wabo mubisha ntiyawuburijemo"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Nuko akaboherereza uruhuri rw’inyoni"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Zikabatera amabuye y’ibumba yacaniriwe"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Maze akabagira nk’ibyatsi byakanjakanjwe"
        }
    ]
}