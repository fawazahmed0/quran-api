{"chapter":[{"chapter":56,"verse":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ إِذَا وَقَعَتِ الْوَاقِعَةُ"},{"chapter":56,"verse":2,"text":"لَيْسَ لِوَقْعَتِهَا كَاذِبَةٌ"},{"chapter":56,"verse":3,"text":"خَافِضَةٌ رَافِعَةٌ"},{"chapter":56,"verse":4,"text":"إِذَا رُجَّتِ الْأَرْضُ رَجًّا"},{"chapter":56,"verse":5,"text":"وَبُسَّتِ الْجِبَالُ بَسًّا"},{"chapter":56,"verse":6,"text":"فَكَانَتْ هَبَاءً مُنْبَثًّا"},{"chapter":56,"verse":7,"text":"وَكُنْتُمْ أَزْوَاجًا ثَلَاثَةً"},{"chapter":56,"verse":8,"text":"فَأَصْحَابُ الْمَيْمَنَةِ مَا أَصْحَابُ الْمَيْمَنَةِ"},{"chapter":56,"verse":9,"text":"وَأَصْحَابُ الْمَشْأَمَةِ مَا أَصْحَابُ الْمَشْأَمَةِ"},{"chapter":56,"verse":10,"text":"وَالسَّابِقُونَ السَّابِقُونَ"},{"chapter":56,"verse":11,"text":"أُولَٰئِكَ الْمُقَرَّبُونَ"},{"chapter":56,"verse":12,"text":"فِي جَنَّاتِ النَّعِيمِ"},{"chapter":56,"verse":13,"text":"ثُلَّةٌ مِنَ الْأَوَّلِينَ"},{"chapter":56,"verse":14,"text":"وَقَلِيلٌ مِنَ الْآخِرِينَ"},{"chapter":56,"verse":15,"text":"عَلَىٰ سُرُرٍ مَوْضُونَةٍ"},{"chapter":56,"verse":16,"text":"مُتَّكِئِينَ عَلَيْهَا مُتَقَابِلِينَ"},{"chapter":56,"verse":17,"text":"يَطُوفُ عَلَيْهِمْ وِلْدَانٌ مُخَلَّدُونَ"},{"chapter":56,"verse":18,"text":"بِأَكْوَابٍ وَأَبَارِيقَ وَكَأْسٍ مِنْ مَعِينٍ"},{"chapter":56,"verse":19,"text":"لَا يُصَدَّعُونَ عَنْهَا وَلَا يُنْزِفُونَ"},{"chapter":56,"verse":20,"text":"وَفَاكِهَةٍ مِمَّا يَتَخَيَّرُونَ"},{"chapter":56,"verse":21,"text":"وَلَحْمِ طَيْرٍ مِمَّا يَشْتَهُونَ"},{"chapter":56,"verse":22,"text":"وَحُورٌ عِينٌ"},{"chapter":56,"verse":23,"text":"كَأَمْثَالِ اللُّؤْلُؤِ الْمَكْنُونِ"},{"chapter":56,"verse":24,"text":"جَزَاءً بِمَا كَانُوا يَعْمَلُونَ"},{"chapter":56,"verse":25,"text":"لَا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا تَأْثِيمًا"},{"chapter":56,"verse":26,"text":"إِلَّا قِيلًا سَلَامًا سَلَامًا"},{"chapter":56,"verse":27,"text":"وَأَصْحَابُ الْيَمِينِ مَا أَصْحَابُ الْيَمِينِ"},{"chapter":56,"verse":28,"text":"فِي سِدْرٍ مَخْضُودٍ"},{"chapter":56,"verse":29,"text":"وَطَلْحٍ مَنْضُودٍ"},{"chapter":56,"verse":30,"text":"وَظِلٍّ مَمْدُودٍ"},{"chapter":56,"verse":31,"text":"وَمَاءٍ مَسْكُوبٍ"},{"chapter":56,"verse":32,"text":"وَفَاكِهَةٍ كَثِيرَةٍ"},{"chapter":56,"verse":33,"text":"لَا مَقْطُوعَةٍ وَلَا مَمْنُوعَةٍ"},{"chapter":56,"verse":34,"text":"وَفُرُشٍ مَرْفُوعَةٍ"},{"chapter":56,"verse":35,"text":"إِنَّا أَنْشَأْنَاهُنَّ إِنْشَاءً"},{"chapter":56,"verse":36,"text":"فَجَعَلْنَاهُنَّ أَبْكَارًا"},{"chapter":56,"verse":37,"text":"عُرُبًا أَتْرَابًا"},{"chapter":56,"verse":38,"text":"لِأَصْحَابِ الْيَمِينِ"},{"chapter":56,"verse":39,"text":"ثُلَّةٌ مِنَ الْأَوَّلِينَ"},{"chapter":56,"verse":40,"text":"وَثُلَّةٌ مِنَ الْآخِرِينَ"},{"chapter":56,"verse":41,"text":"وَأَصْحَابُ الشِّمَالِ مَا أَصْحَابُ الشِّمَالِ"},{"chapter":56,"verse":42,"text":"فِي سَمُومٍ وَحَمِيمٍ"},{"chapter":56,"verse":43,"text":"وَظِلٍّ مِنْ يَحْمُومٍ"},{"chapter":56,"verse":44,"text":"لَا بَارِدٍ وَلَا كَرِيمٍ"},{"chapter":56,"verse":45,"text":"إِنَّهُمْ كَانُوا قَبْلَ ذَٰلِكَ مُتْرَفِينَ"},{"chapter":56,"verse":46,"text":"وَكَانُوا يُصِرُّونَ عَلَى الْحِنْثِ الْعَظِيمِ"},{"chapter":56,"verse":47,"text":"وَكَانُوا يَقُولُونَ أَئِذَا مِتْنَا وَكُنَّا تُرَابًا وَعِظَامًا أَإِنَّا لَمَبْعُوثُونَ"},{"chapter":56,"verse":48,"text":"أَوَآبَاؤُنَا الْأَوَّلُونَ"},{"chapter":56,"verse":49,"text":"قُلْ إِنَّ الْأَوَّلِينَ وَالْآخِرِينَ"},{"chapter":56,"verse":50,"text":"لَمَجْمُوعُونَ إِلَىٰ مِيقَاتِ يَوْمٍ مَعْلُومٍ"},{"chapter":56,"verse":51,"text":"ثُمَّ إِنَّكُمْ أَيُّهَا الضَّالُّونَ الْمُكَذِّبُونَ"},{"chapter":56,"verse":52,"text":"لَآكِلُونَ مِنْ شَجَرٍ مِنْ زَقُّومٍ"},{"chapter":56,"verse":53,"text":"فَمَالِئُونَ مِنْهَا الْبُطُونَ"},{"chapter":56,"verse":54,"text":"فَشَارِبُونَ عَلَيْهِ مِنَ الْحَمِيمِ"},{"chapter":56,"verse":55,"text":"فَشَارِبُونَ شُرْبَ الْهِيمِ"},{"chapter":56,"verse":56,"text":"هَٰذَا نُزُلُهُمْ يَوْمَ الدِّينِ"},{"chapter":56,"verse":57,"text":"نَحْنُ خَلَقْنَاكُمْ فَلَوْلَا تُصَدِّقُونَ"},{"chapter":56,"verse":58,"text":"أَفَرَأَيْتُمْ