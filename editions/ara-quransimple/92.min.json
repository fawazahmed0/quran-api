{"chapter":[{"chapter":92,"verse":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ وَاللَّيْلِ إِذَا يَغْشَىٰ"},{"chapter":92,"verse":2,"text":"وَالنَّهَارِ إِذَا تَجَلَّىٰ"},{"chapter":92,"verse":3,"text":"وَمَا خَلَقَ الذَّكَرَ وَالْأُنْثَىٰ"},{"chapter":92,"verse":4,"text":"إِنَّ سَعْيَكُمْ لَشَتَّىٰ"},{"chapter":92,"verse":5,"text":"فَأَمَّا مَنْ أَعْطَىٰ وَاتَّقَىٰ"},{"chapter":92,"verse":6,"text":"وَصَدَّقَ بِالْحُسْنَىٰ"},{"chapter":92,"verse":7,"text":"فَسَنُيَسِّرُهُ لِلْيُسْرَىٰ"},{"chapter":92,"verse":8,"text":"وَأَمَّا مَنْ بَخِلَ وَاسْتَغْنَىٰ"},{"chapter":92,"verse":9,"text":"وَكَذَّبَ بِالْحُسْنَىٰ"},{"chapter":92,"verse":10,"text":"فَسَنُيَسِّرُهُ لِلْعُسْرَىٰ"},{"chapter":92,"verse":11,"text":"وَمَا يُغْنِي عَنْهُ مَالُهُ إِذَا تَرَدَّىٰ"},{"chapter":92,"verse":12,"text":"إِنَّ عَلَيْنَا لَلْهُدَىٰ"},{"chapter":92,"verse":13,"text":"وَإِنَّ لَنَا لَلْآخِرَةَ وَالْأُولَىٰ"},{"chapter":92,"verse":14,"text":"فَأَنْذَرْتُكُمْ نَارًا تَلَظَّىٰ"},{"chapter":92,"verse":15,"text":"لَا يَصْلَاهَا إِلَّا الْأَشْقَى"},{"chapter":92,"verse":16,"text":"الَّذِي كَذَّبَ وَتَوَلَّىٰ"},{"chapter":92,"verse":17,"text":"وَسَيُجَنَّبُهَا الْأَتْقَى"},{"chapter":92,"verse":18,"text":"الَّذِي يُؤْتِي مَالَهُ يَتَزَكَّىٰ"},{"chapter":92,"verse":19,"text":"وَمَا لِأَحَدٍ عِنْدَهُ مِنْ نِعْمَةٍ تُجْزَىٰ"},{"chapter":92,"verse":20,"text":"إِلَّا ابْتِغَاءَ وَجْهِ رَبِّهِ الْأَعْلَىٰ"},{"chapter":92,"verse":21,"text":"وَلَسَوْفَ يَرْضَىٰ"}]}