{"pages":[{"chapter":82,"verse":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ إِذَا السَّمَاءُ انْفَطَرَتْ"},{"chapter":82,"verse":2,"text":"وَإِذَا الْكَوَاكِبُ انْتَثَرَتْ"},{"chapter":82,"verse":3,"text":"وَإِذَا الْبِحَارُ فُجِّرَتْ"},{"chapter":82,"verse":4,"text":"وَإِذَا الْقُبُورُ بُعْثِرَتْ"},{"chapter":82,"verse":5,"text":"عَلِمَتْ نَفْسٌ مَا قَدَّمَتْ وَأَخَّرَتْ"},{"chapter":82,"verse":6,"text":"يَا أَيُّهَا الْإِنْسَانُ مَا غَرَّكَ بِرَبِّكَ الْكَرِيمِ"},{"chapter":82,"verse":7,"text":"الَّذِي خَلَقَكَ فَسَوَّاكَ فَعَدَلَكَ"},{"chapter":82,"verse":8,"text":"فِي أَيِّ صُورَةٍ مَا شَاءَ رَكَّبَكَ"},{"chapter":82,"verse":9,"text":"كَلَّا بَلْ تُكَذِّبُونَ بِالدِّينِ"},{"chapter":82,"verse":10,"text":"وَإِنَّ عَلَيْكُمْ لَحَافِظِينَ"},{"chapter":82,"verse":11,"text":"كِرَامًا كَاتِبِينَ"},{"chapter":82,"verse":12,"text":"يَعْلَمُونَ مَا تَفْعَلُونَ"},{"chapter":82,"verse":13,"text":"إِنَّ الْأَبْرَارَ لَفِي نَعِيمٍ"},{"chapter":82,"verse":14,"text":"وَإِنَّ الْفُجَّارَ لَفِي جَحِيمٍ"},{"chapter":82,"verse":15,"text":"يَصْلَوْنَهَا يَوْمَ الدِّينِ"},{"chapter":82,"verse":16,"text":"وَمَا هُمْ عَنْهَا بِغَائِبِينَ"},{"chapter":82,"verse":17,"text":"وَمَا أَدْرَاكَ مَا يَوْمُ الدِّينِ"},{"chapter":82,"verse":18,"text":"ثُمَّ مَا أَدْرَاكَ مَا يَوْمُ الدِّينِ"},{"chapter":82,"verse":19,"text":"يَوْمَ لَا تَمْلِكُ نَفْسٌ لِنَفْسٍ شَيْئًا ۖ وَالْأَمْرُ يَوْمَئِذٍ لِلَّهِ"},{"chapter":83,"verse":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ وَيْلٌ لِلْمُطَفِّفِينَ"},{"chapter":83,"verse":2,"text":"الَّذِينَ إِذَا اكْتَالُوا عَلَى النَّاسِ يَسْتَوْفُونَ"},{"chapter":83,"verse":3,"text":"وَإِذَا كَالُوهُمْ أَوْ وَزَنُوهُمْ يُخْسِرُونَ"},{"chapter":83,"verse":4,"text":"أَلَا يَظُنُّ أُولَٰئِكَ أَنَّهُمْ مَبْعُوثُونَ"},{"chapter":83,"verse":5,"text":"لِيَوْمٍ عَظِيمٍ"},{"chapter":83,"verse":6,"text":"يَوْمَ يَقُومُ النَّاسُ لِرَبِّ الْعَالَمِينَ"}]}