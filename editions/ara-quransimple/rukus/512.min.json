{"rukus":[{"chapter":75,"verse":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ لَا أُقْسِمُ بِيَوْمِ الْقِيَامَةِ"},{"chapter":75,"verse":2,"text":"وَلَا أُقْسِمُ بِالنَّفْسِ اللَّوَّامَةِ"},{"chapter":75,"verse":3,"text":"أَيَحْسَبُ الْإِنْسَانُ أَلَّنْ نَجْمَعَ عِظَامَهُ"},{"chapter":75,"verse":4,"text":"بَلَىٰ قَادِرِينَ عَلَىٰ أَنْ نُسَوِّيَ بَنَانَهُ"},{"chapter":75,"verse":5,"text":"بَلْ يُرِيدُ الْإِنْسَانُ لِيَفْجُرَ أَمَامَهُ"},{"chapter":75,"verse":6,"text":"يَسْأَلُ أَيَّانَ يَوْمُ الْقِيَامَةِ"},{"chapter":75,"verse":7,"text":"فَإِذَا بَرِقَ الْبَصَرُ"},{"chapter":75,"verse":8,"text":"وَخَسَفَ الْقَمَرُ"},{"chapter":75,"verse":9,"text":"وَجُمِعَ الشَّمْسُ وَالْقَمَرُ"},{"chapter":75,"verse":10,"text":"يَقُولُ الْإِنْسَانُ يَوْمَئِذٍ أَيْنَ الْمَفَرُّ"},{"chapter":75,"verse":11,"text":"كَلَّا لَا وَزَرَ"},{"chapter":75,"verse":12,"text":"إِلَىٰ رَبِّكَ يَوْمَئِذٍ الْمُسْتَقَرُّ"},{"chapter":75,"verse":13,"text":"يُنَبَّأُ الْإِنْسَانُ يَوْمَئِذٍ بِمَا قَدَّمَ وَأَخَّرَ"},{"chapter":75,"verse":14,"text":"بَلِ الْإِنْسَانُ عَلَىٰ نَفْسِهِ بَصِيرَةٌ"},{"chapter":75,"verse":15,"text":"وَلَوْ أَلْقَىٰ مَعَاذِيرَهُ"},{"chapter":75,"verse":16,"text":"لَا تُحَرِّكْ بِهِ لِسَانَكَ لِتَعْجَلَ بِهِ"},{"chapter":75,"verse":17,"text":"إِنَّ عَلَيْنَا جَمْعَهُ وَقُرْآنَهُ"},{"chapter":75,"verse":18,"text":"فَإِذَا قَرَأْنَاهُ فَاتَّبِعْ قُرْآنَهُ"},{"chapter":75,"verse":19,"text":"ثُمَّ إِنَّ عَلَيْنَا بَيَانَهُ"},{"chapter":75,"verse":20,"text":"كَلَّا بَلْ تُحِبُّونَ الْعَاجِلَةَ"},{"chapter":75,"verse":21,"text":"وَتَذَرُونَ الْآخِرَةَ"},{"chapter":75,"verse":22,"text":"وُجُوهٌ يَوْمَئِذٍ نَاضِرَةٌ"},{"chapter":75,"verse":23,"text":"إِلَىٰ رَبِّهَا نَاظِرَةٌ"},{"chapter":75,"verse":24,"text":"وَوُجُوهٌ يَوْمَئِذٍ بَاسِرَةٌ"},{"chapter":75,"verse":25,"text":"تَظُنُّ أَنْ يُفْعَلَ بِهَا فَاقِرَةٌ"},{"chapter":75,"verse":26,"text":"كَلَّا إِذَا بَلَغَتِ التَّرَاقِيَ"},{"chapter":75,"verse":27,"text":"وَقِيلَ مَنْ ۜ رَاقٍ"},{"chapter":75,"verse":28,"text":"وَظَنَّ أَنَّهُ الْفِرَاقُ"},{"chapter":75,"verse":29,"text":"وَالْتَفَّتِ السَّاقُ بِالسَّاقِ"},{"chapter":75,"verse":30,"text":"إِلَىٰ رَبِّكَ يَوْمَئِذٍ الْمَسَاقُ"}]}