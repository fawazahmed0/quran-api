{"chapter":[{"chapter":87,"verse":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ سَبِّحِ اسْمَ رَبِّكَ الْأَعْلَى"},{"chapter":87,"verse":2,"text":"الَّذِي خَلَقَ فَسَوَّىٰ"},{"chapter":87,"verse":3,"text":"وَالَّذِي قَدَّرَ فَهَدَىٰ"},{"chapter":87,"verse":4,"text":"وَالَّذِي أَخْرَجَ الْمَرْعَىٰ"},{"chapter":87,"verse":5,"text":"فَجَعَلَهُ غُثَاءً أَحْوَىٰ"},{"chapter":87,"verse":6,"text":"سَنُقْرِئُكَ فَلَا تَنْسَىٰ"},{"chapter":87,"verse":7,"text":"إِلَّا مَا شَاءَ اللَّهُ ۚ إِنَّهُ يَعْلَمُ الْجَهْرَ وَمَا يَخْفَىٰ"},{"chapter":87,"verse":8,"text":"وَنُيَسِّرُكَ لِلْيُسْرَىٰ"},{"chapter":87,"verse":9,"text":"فَذَكِّرْ إِنْ نَفَعَتِ الذِّكْرَىٰ"},{"chapter":87,"verse":10,"text":"سَيَذَّكَّرُ مَنْ يَخْشَىٰ"},{"chapter":87,"verse":11,"text":"وَيَتَجَنَّبُهَا الْأَشْقَى"},{"chapter":87,"verse":12,"text":"الَّذِي يَصْلَى النَّارَ الْكُبْرَىٰ"},{"chapter":87,"verse":13,"text":"ثُمَّ لَا يَمُوتُ فِيهَا وَلَا يَحْيَىٰ"},{"chapter":87,"verse":14,"text":"قَدْ أَفْلَحَ مَنْ تَزَكَّىٰ"},{"chapter":87,"verse":15,"text":"وَذَكَرَ اسْمَ رَبِّهِ فَصَلَّىٰ"},{"chapter":87,"verse":16,"text":"بَلْ تُؤْثِرُونَ الْحَيَاةَ الدُّنْيَا"},{"chapter":87,"verse":17,"text":"وَالْآخِرَةُ خَيْرٌ وَأَبْقَىٰ"},{"chapter":87,"verse":18,"text":"إِنَّ هَٰذَا لَفِي الصُّحُفِ الْأُولَىٰ"},{"chapter":87,"verse":19,"text":"صُحُفِ إِبْرَاهِيمَ وَمُوسَىٰ"}]}