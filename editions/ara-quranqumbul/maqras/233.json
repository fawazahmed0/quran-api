{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "عَمَّ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "عَنِ ٱلنَّبَإِ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ٱلَّذِي هُمُۥ فِيهِۦ مُخۡتَلِفُونَ"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "كَلَّا سَيَعۡلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "ثُمَّ كَلَّا سَيَعۡلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "أَلَمۡ نَجۡعَلِ ٱلۡأَرۡضَ مِهَٰد ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "وَٱلۡجِبَالَ أَوۡتَاد ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "وَخَلَقۡنَٰكُمُۥ أَزۡوَٰج ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "وَجَعَلۡنَا نَوۡمَكُمُۥ سُبَات ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "وَجَعَلۡنَا ٱلَّيۡلَ لِبَاس ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "وَجَعَلۡنَا ٱلنَّهَارَ مَعَاش ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "وَبَنَيۡنَا فَوۡقَكُمُۥ سَبۡع ࣰ ا شِدَاد ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "وَجَعَلۡنَا سِرَاج ࣰ ا وَهَّاج ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "وَأَنزَلۡنَا مِنَ ٱلۡمُعۡصِرَٰتِ مَآء ࣰ ثَجَّاج ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "لِّنُخۡرِجَ بِهِۦ حَبّ ࣰ ا وَنَبَات ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "وَجَنَّٰتٍ أَلۡفَافًا"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "إِنَّ يَوۡمَ ٱلۡفَصۡلِ كَانَ مِيقَٰت ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "يَوۡمَ يُنفَخُ فِي ٱلصُّورِ فَتَأۡتُونَ أَفۡوَاج ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "وَفُتِّحَتِ ٱلسَّمَآءُ فَكَانَتۡ أَبۡوَٰب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "وَسُيِّرَتِ ٱلۡجِبَالُ فَكَانَتۡ سَرَابًا"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "إِنَّ جَهَنَّمَ كَانَتۡ مِرۡصَاد ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "لِّلطَّٰغِينَ مَـَٔاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "لَّٰبِثِينَ فِيهَا أَحۡقَاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "لَّا يَذُوقُونَ فِيهَا بَرۡد ࣰ ا وَلَا شَرَابًا"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "إِلَّا حَمِيم ࣰ ا وَغَسَاق ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "جَزَآء ࣰ وِفَاقًا"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "إِنَّهُمُۥ كَانُواْ لَا يَرۡجُونَ حِسَاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "وَكَذَّبُواْ بِـَٔايَٰتِنَا كِذَّاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "وَكُلَّ شَيۡءٍ أَحۡصَيۡنَٰهُۥ كِتَٰب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "فَذُوقُواْ فَلَن نَّزِيدَكُمُۥ إِلَّا عَذَابًا"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "إِنَّ لِلۡمُتَّقِينَ مَفَازًا"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "حَدَآئِقَ وَأَعۡنَٰب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "وَكَوَاعِبَ أَتۡرَاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "وَكَأۡس ࣰ ا دِهَاق ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "لَّا يَسۡمَعُونَ فِيهَا لَغۡو ࣰ ا وَلَا كِذَّٰب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "جَزَآء ࣰ مِّن رَّبِّكَ عَطَآءً حِسَاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "رَّبُّ ٱلسَّمَٰوَٰتِ وَٱلۡأَرۡضِ وَمَا بَيۡنَهُمَا ٱلرَّحۡمَٰنُۖ لَا يَمۡلِكُونَ مِنۡهُۥ خِطَاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "يَوۡمَ يَقُومُ ٱلرُّوحُ وَٱلۡمَلَٰٓئِكَةُ صَفّ ࣰ اۖ لَّا يَتَكَلَّمُونَ إِلَّا مَنۡ أَذِنَ لَهُ ٱلرَّحۡمَٰنُ وَقَالَ صَوَاب ࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "ذَٰلِكَ ٱلۡيَوۡمُ ٱلۡحَقُّۖ فَمَن شَآءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ مَـَٔابًا"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "إِنَّا أَنذَرۡنَٰكُمُۥ عَذَاب ࣰ ا قَرِيب ࣰ ا يَوۡمَ يَنظُرُ ٱلۡمَرۡءُ مَا قَدَّمَتۡ يَدَاهُۥ وَيَقُولُ ٱلۡكَافِرُ يَٰلَيۡتَنِي كُنتُ تُرَٰبَۢا"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "وَٱلنَّٰزِعَٰتِ غَرۡق ࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "وَٱلنَّٰشِطَٰتِ نَشۡط ࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "وَٱلسَّٰبِحَٰتِ سَبۡح ࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "فَٱلسَّٰبِقَٰتِ سَبۡق ࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "فَٱلۡمُدَبِّرَٰتِ أَمۡر ࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "يَوۡمَ تَرۡجُفُ ٱلرَّاجِفَةُ"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "تَتۡبَعُهَا ٱلرَّادِفَةُ"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "قُلُوب ࣱ يَوۡمَئِذ ࣲ وَاجِفَةٌ"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "أَبۡصَٰرُهَا خَٰشِعَة ࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "يَقُولُونَ أَ۟نَّا لَمَرۡدُودُونَ فِي ٱلۡحَافِرَةِ"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "أَ۟ذَا كُنَّا عِظَٰم ࣰ ا نَّخِرَة ࣰ‏"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "قَالُواْ تِلۡكَ إِذ ࣰ ا كَرَّةٌ خَاسِرَة ࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "فَإِنَّمَا هِيَ زَجۡرَة ࣱ وَٰحِدَة ࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "فَإِذَا هُمُۥ بِٱلسَّاهِرَةِ"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "هَلۡ أَتَىٰكَ حَدِيثُ مُوسَىٰ"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "إِذۡ نَادَىٰهُۥ رَبُّهُۥ بِٱلۡوَادِ ٱلۡمُقَدَّسِ طُوَى"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "ٱذۡهَبۡ إِلَىٰ فِرۡعَوۡنَ إِنَّهُۥ طَغَىٰ"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "فَقُلۡ هَل لَّكَ إِلَىٰ أَن تَزَّكَّىٰ"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "وَأَهۡدِيَكَ إِلَىٰ رَبِّكَ فَتَخۡشَىٰ"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "فَأَرَىٰهُ ٱلۡأٓيَةَ ٱلۡكُبۡرَىٰ"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "فَكَذَّبَ وَعَصَىٰ"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "ثُمَّ أَدۡبَرَ يَسۡعَىٰ"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "فَحَشَرَ فَنَادَىٰ"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "فَقَالَ أَنَا۠ رَبُّكُمُ ٱلۡأَعۡلَىٰ"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "فَأَخَذَهُ ٱللَّهُ نَكَالَ ٱلۡأٓخِرَةِ وَٱلۡأُولَىٰ"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "إِنَّ فِي ذَٰلِكَ لَعِبۡرَة ࣰ لِّمَن يَخۡشَىٰ"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "ءَا۬نتُمُۥ أَشَدُّ خَلۡقًا أَمِ ٱلسَّمَآءُۚ بَنَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "رَفَعَ سَمۡكَهَا فَسَوَّىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "وَأَغۡطَشَ لَيۡلَهَا وَأَخۡرَجَ ضُحَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "وَٱلۡأَرۡضَ بَعۡدَ ذَٰلِكَ دَحَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "أَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "وَٱلۡجِبَالَ أَرۡسَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "مَتَٰع ࣰ ا لَّكُمُۥ وَلِأَنۡعَٰمِكُمُۥ"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "فَإِذَا جَآءَتِ ٱلطَّآمَّةُ ٱلۡكُبۡرَىٰ"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "يَوۡمَ يَتَذَكَّرُ ٱلۡإِنسَٰنُ مَا سَعَىٰ"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "وَبُرِّزَتِ ٱلۡجَحِيمُ لِمَن يَرَىٰ"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "فَأَمَّا مَن طَغَىٰ"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "وَءَاثَرَ ٱلۡحَيَوٰةَ ٱلدُّنۡيَا"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "فَإِنَّ ٱلۡجَحِيمَ هِيَ ٱلۡمَأۡوَىٰ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "وَأَمَّا مَنۡ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى ٱلنَّفۡسَ عَنِ ٱلۡهَوَىٰ"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "فَإِنَّ ٱلۡجَنَّةَ هِيَ ٱلۡمَأۡوَىٰ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "يَسۡـَٔلُونَكَ عَنِ ٱلسَّاعَةِ أَيَّانَ مُرۡسَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "فِيمَ أَنتَ مِن ذِكۡرَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "إِلَىٰ رَبِّكَ مُنتَهَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "إِنَّمَا أَنتَ مُنذِرُ مَن يَخۡشَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "كَأَنَّهُمُۥ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُواْ إِلَّا عَشِيَّةً أَوۡ ضُحَىٰهَا"
        }
    ]
}