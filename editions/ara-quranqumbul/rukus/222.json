{
    "rukus": [
        {
            "chapter": 15,
            "verse": 61,
            "text": "فَلَمَّا جَآءَ ا۟لَ لُوطٍ ٱلۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "قَالَ إِنَّكُمُۥ قَوۡم ࣱ مُّنكَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "قَالُواْ بَلۡ جِئۡنَٰكَ بِمَا كَانُواْ فِيهِۦ يَمۡتَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "وَأَتَيۡنَٰكَ بِٱلۡحَقِّ وَإِنَّا لَصَٰدِقُونَ"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "فَٱسۡرِ بِأَهۡلِكَ بِقِطۡع ࣲ مِّنَ ٱلَّيۡلِ وَٱتَّبِعۡ أَدۡبَٰرَهُمُۥ وَلَا يَلۡتَفِتۡ مِنكُمُۥ أَحَد ࣱ وَٱمۡضُواْ حَيۡثُ تُؤۡمَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "وَقَضَيۡنَا إِلَيۡهِۦ ذَٰلِكَ ٱلۡأَمۡرَ أَنَّ دَابِرَ هَٰؤُلَآءِ مَقۡطُوع ࣱ مُّصۡبِحِينَ"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "وَجَآءَ ا۬هۡلُ ٱلۡمَدِينَةِ يَسۡتَبۡشِرُونَ"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "قَالَ إِنَّ هَٰؤُلَآءِ ضَيۡفِي فَلَا تَفۡضَحُونِ"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "وَٱتَّقُواْ ٱللَّهَ وَلَا تُخۡزُونِ"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "قَالُواْ أَوَلَمۡ نَنۡهَكَ عَنِ ٱلۡعَٰلَمِينَ"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "قَالَ هَٰؤُلَآءِ بَنَاتِي إِن كُنتُمُۥ فَٰعِلِينَ"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "لَعَمۡرُكَ إِنَّهُمُۥ لَفِي سَكۡرَتِهِمُۥ يَعۡمَهُونَ"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "فَأَخَذَتۡهُمُ ٱلصَّيۡحَةُ مُشۡرِقِينَ"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "فَجَعَلۡنَا عَٰلِيَهَا سَافِلَهَا وَأَمۡطَرۡنَا عَلَيۡهِمُۥ حِجَارَة ࣰ مِّن سِجِّيلٍ"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَٰت ࣲ لِّلۡمُتَوَسِّمِينَ"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "وَإِنَّهَا لَبِسَبِيل ࣲ مُّقِيمٍ"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَة ࣰ لِّلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "وَإِن كَانَ أَصۡحَٰبُ ٱلۡأَيۡكَةِ لَظَٰلِمِينَ"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "فَٱنتَقَمۡنَا مِنۡهُمُۥ وَإِنَّهُمَا لَبِإِمَام ࣲ مُّبِين ࣲ‏"
        }
    ]
}