{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Hari kiamat"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "apakah hari kiamat itu"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Tahukah kamu apakah hari kiamat itu"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Pada hari itu manusia adalah seperti kupu-kupu yang bertebaran"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "dan gunung-gunung adalah seperti bulu yang dihambur-hamburkan"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Dan adapun orang-orang yang berat timbangan (kebaikan)nya"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "maka dia berada dalam kehidupan yang memuaskan"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Dan adapun orang-orang yang ringan timbangan (kebaikan)nya"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "maka tempat kembalinya adalah neraka HÄwiyah"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Tahukah kamu apakah neraka HÄwiyah itu"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "(Yaitu) api yang sangat panas"
        }
    ]
}