{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "nis'sanśayaṁ, candrane tanneyāṇa satyaṁ"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "rātri pinniṭṭ pēākumpēāḷ atine tanneyāṇa satyaṁ"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "prabhātaṁ pularnnāl atu tanneyāṇa satyaṁ"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "tīrccayāyuṁ at (narakaṁ) geravamuḷḷa kāryaṅṅaḷil onnākunnu"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "manuṣyarkk oru tākkītenna nilayil"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "atāyat niṅṅaḷil ninn munnēāṭṭ pēākuvānēā, pinnēāṭṭ vekkuvānēā uddēśikkunnavarkk‌"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "ōrēā vyaktiyuṁ tān sampādiccu veccatin paṇayappeṭṭavanākunnu"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "valatupakṣakkāreāḻike"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "cila svargattēāppukaḷilāyirikkuṁ avar. avar anvēṣikkuṁ"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "kuṟṟavāḷikaḷeppaṟṟi"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "niṅṅaḷe narakattil pravēśippiccat enteānnāṇenn‌"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "avar (kuṟṟavāḷikaḷ) maṟupaṭi paṟayuṁ: ñaṅṅaḷ namaskarikkunnavaruṭe kūṭṭattilāyilla"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "ñaṅṅaḷ agatikk āhāraṁ nalkumāyirunnilla"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "tēānnivāsattil muḻukunnavaruṭe kūṭe ñaṅṅaḷuṁ muḻukumāyirunnu"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "pratiphalattinṟe nāḷine ñaṅṅaḷ niṣēdhiccu kaḷayumāyirunnu"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "aṅṅaneyirikke ā uṟappāya maraṇaṁ ñaṅṅaḷkk vannetti"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "ini avarkk śupārśakkāruṭe śupārśayeānnuṁ prayēājanappeṭukayilla"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "ennirikke avarkkentu paṟṟi? avar ulbēādhanattil ninn tiriññukaḷayunnavarāyirikkunnu"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "avar viṟaḷi piṭicca kaḻutakaḷeppēālirikkunnu"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "sinhattil ninn ōṭirakṣappeṭunna (kaḻutakaḷ)"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "alla, avaril ōrēāruttaruṁ āgrahikkunnu; tanikk allāhuviṅkal ninn nivarttiya ēṭukaḷ nalkappeṭaṇamenn‌"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "alla; pakṣe, avar paralēākatte bhayappeṭunnilla"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "alla; tīrccayāyuṁ it oru ulbēādhanamākunnu"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "ākayāl ār uddēśikkunnuvēā avarat ōrmiccu keāḷḷaṭṭe"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "allāhu uddēśikkunnuveṅkilallāte avar ōrmikkunnatalla. avanākunnu bhaktikkavakāśappeṭṭavan; pāpamēācanattin avakāśappeṭṭavan"
        }
    ]
}