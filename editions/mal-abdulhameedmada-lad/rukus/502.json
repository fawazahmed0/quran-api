{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "sambhavikkānirikkunna oru śikṣaye oru cēādyakarttāv atā āvaśyappeṭṭirikkunnu"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "satyaniṣēdhikaḷkk at taṭukkuvān ārumilla"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "kayaṟippēākunna vaḻikaḷuṭe adhipanāya allāhuviṅkal ninn varunna (śikṣaye)"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "ampatināyiraṁ keāllattinṟe aḷavuḷḷatāya oru divasattil malakkukaḷuṁ ātmāvuṁ avaṅkalēkk kayaṟippēākunnu"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "ennāl (nabiyē,) nī bhaṅgiyāya kṣama kaikkeāḷḷuka"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "tīrccayāyuṁ avar atine vidūramāyi kāṇunnu"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "nāṁ atine aṭuttatāyuṁ kāṇunnu"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "ākāśaṁ urukiya lēāhaṁ pēāle ākunna divasaṁ"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "parvvataṅṅaḷ kaṭaññarēāmaṁ pēāleyuṁ"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "oruṟṟa bandhuvuṁ maṟṟeāru uṟṟabandhuvinēāṭ (ann‌) yāteānnuṁ cēādikkukayilla"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "avarkk an'yēān'yaṁ kāṇikkappeṭuṁ. tanṟe makkaḷe prāyaścittamāyi nalki keāṇṭ ā divasatte śikṣayil ninn mēācanaṁ nēṭān kaḻiññirunneṅkil enn kuṟṟavāḷi āgrahikkuṁ"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "tanṟe bhāryayeyuṁ sahēādaraneyuṁ"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "tanikk abhayaṁ nalkiyirunna tanṟe bandhukkaḷeyuṁ"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "bhūmiyiluḷḷa muḻuvan āḷukaḷeyuṁ. enniṭṭ atavane rakṣappeṭuttukayuṁ ceytirunneṅkil enn‌"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "sanśayaṁ vēṇṭa, tīrccayāyuṁ at āḷikkattunna narakamākunnu"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "talayuṭe teāliyuriccu kaḷayunna narakāgni"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "pinnēākkaṁ māṟukayuṁ, tiriññukaḷayukayuṁ ceytavare at kṣaṇikkuṁ"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "śēkhariccu sūkṣiccu veccavareyuṁ"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "tīrccayāyuṁ manuṣyan sr̥ṣṭikkappeṭṭirikkunnat aṅṅē aṟṟaṁ akṣamanāyikkeāṇṭāṇ‌"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "atāyat tinma bādhiccāl peāṟutikēṭ kāṇikkunnavanāyi keāṇṭuṁ"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "nanma kaivannāl taṭaññu vekkunnavanāyikeāṇṭuṁ"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "namaskarikkunnavareāḻike"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "atāyat taṅṅaḷuṭe namaskārattil sthiramāyi niṣṭhayuḷḷavar"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "taṅṅaḷuṭe svattukkaḷil nirṇitamāya avakāśaṁ nalkunnavaruṁ"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "cēādiccu varunnavannuṁ upajīvanaṁ taṭayappeṭṭavannuṁ"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "pratiphaladinattil viśvasikkunnavaruṁ"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "taṅṅaḷuṭe rakṣitāvinṟe śikṣayepaṟṟi bhayamuḷḷavarumeāḻike"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "tīrccayāyuṁ avaruṭe rakṣitāvinṟe śikṣa (varikayillenn‌) samādhānappeṭān paṟṟāttatākunnu"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "taṅṅaḷuṭe guhyāvayavaṅṅaḷ kāttusūkṣikkunnavaruṁ (oḻike)"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "taṅṅaḷuṭe bhāryamāruṭeyēā, valaṁ kaikaḷ uṭamappeṭuttiyavaruṭeyēā kāryattileāḻike. tīrccayāyuṁ avar ākṣēpamuktarākunnu"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "ennāl atilappuṟaṁ āreṅkiluṁ āgrahikkunna pakṣaṁ attarakkār tanneyākunnu atirukaviyunnavar"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "taṅṅaḷe viśvasiccēlpicca kāryaṅṅaḷuṁ taṅṅaḷuṭe uṭampaṭikaḷuṁ pāliccu pēārunnavaruṁ"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "taṅṅaḷuṭe sākṣyaṅṅaḷ muṟaprakāraṁ nirvahikkunnavaruṁ"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "taṅṅaḷuṭe namaskāraṅṅaḷ niṣṭhayēāṭe nirvahikkunnavaruṁ (oḻike)"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "attarakkār svargattēāppukaḷil ādarikkappeṭunnavarākunnu"
        }
    ]
}