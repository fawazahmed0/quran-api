{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "rāvinetanneyāṇa satyaṁ ; at mūṭikeāṇṭirikkumpēāḷ"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "pakaline tanneyāṇa satyaṁ ; at pratyakṣappeṭumpēāḷ"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "āṇineyuṁ peṇṇineyuṁ sr̥ṣṭicca rītiye tanneyāṇa satyaṁ"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "tīrccayāyuṁ niṅṅaḷuṭe pariśramaṁ vibhinna rūpattiluḷḷatākunnu"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "ennāl ēteārāḷ dānaṁ nalkukayuṁ, sūkṣmata pālikkukayuṁ"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "ēṟṟavuṁ uttamamāyatine satyappeṭuttukayuṁ ceytuvēā"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "avannu nāṁ ēṟṟavuṁ eḷuppamāyatilēkk sekaryappeṭutti keāṭukkunnatāṇ‌"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "ennāl ār piśukku kāṇikkukayuṁ, svayaṁ paryāptata naṭikkukayuṁ"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "ēṟṟavuṁ uttamamāyatine niṣēdhiccu taḷḷukayuṁ ceytuvēā"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "avannu nāṁ ēṟṟavuṁ ñerukkamuḷḷatilēkk sekaryameārukkikeāṭukkunnatāṇ‌"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "avan nāśattil patikkumpēāḷ avanṟe dhanaṁ avann prayēājanappeṭunnatalla"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "tīrccayāyuṁ mārgadarśanaṁ nam'muṭe bādhyatayākunnu"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "tīrccayāyuṁ namukkuḷḷatākunnu paralēākavuṁ ihalēākavuṁ"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "atināl āḷikkattikkeāṇṭirikkunna agniyeppaṟṟi ñān niṅṅaḷkk tākkīt nalkiyirikkunnu"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "ēṟṟavuṁ duṣṭanāya vyaktiyallāte atil pravēśikkukayilla"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "niṣēdhiccu taḷḷukayuṁ, pintiriññu kaḷayukayuṁ (vyakti)"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "ēṟṟavuṁ sūkṣmatayuḷḷa vyakti atil ninn akaṟṟi nirttappeṭunnatāṇ‌"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "pariśud'dhinēṭuvānāyi tanṟe dhanaṁ nalkunna (vyakti)"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "pratyupakāraṁ nalkappeṭēṇṭatāya yāteāru anugrahavuṁ avanṟe pakkal orāḷkkumilla"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "tanṟe atyunnatanāya rakṣitāvinṟe prīti tēṭuka ennatallāte"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "vaḻiye avan tr̥ptippeṭunnatāṇ‌"
        }
    ]
}