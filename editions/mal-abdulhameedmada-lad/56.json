{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "ā sambhavaṁ sambhavicc kaḻiññāl"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "atinṟe sambhavyataye niṣēdhikkunna āruṁ uṇṭāyirikkukayilla"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "(ā sambhavaṁ, cilare) tāḻttunnatuṁ (cilare) uyarttunnatumāyirikkuṁ"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "bhūmi kiṭukiṭā viṟappikkappeṭukayuṁ"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "parvvataṅṅaḷ iṭicc peāṭiyākkappeṭukayuṁ"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "aṅṅane at pāṟippaṟakkunna dhūḷiyāyittīrukayuṁ"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "niṅṅaḷ mūnn tarakkārāyittīrukayuṁ ceyyunna sandarbhamatre at‌"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "appēāḷ oru vibhāgaṁ valatupakṣakkār. entāṇ ī valatupakṣakkāruṭe avastha"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "maṟṟeāru vibhāgaṁ iṭatupakṣakkār. entāṇ ī iṭatupakṣakkāruṭe avastha"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(satyaviśvāsattiluṁ salpravr̥ttikaḷiluṁ) munnēṟiyavar (paralēākattuṁ) munnēākkakkār tanne"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "avarākunnu sāmīpyaṁ nalkappeṭṭavar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "sukhānubhūtikaḷuṭe svargattēāppukaḷil"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "pūrvvikanmāril ninn oru vibhāgavuṁ"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "pilkkālakkāril ninn kuṟaccu pērumatre ivar"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "svarṇanūlukeāṇṭ meṭaññuṇṭākkappeṭṭa kaṭṭilukaḷil āyirikkuṁ. avar"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "avayil avar parasparaṁ abhimukhamāyi cāriyirikkunnavarāyirikkuṁ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "nityajīvitaṁ nalkappeṭṭa bālanmār avaruṭe iṭayil cuṟṟi naṭakkuṁ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "kēāppakaḷuṁ kūjakaḷuṁ śud'dhamāya uṟavu jalaṁ niṟacca pānapātravuṁ keāṇṭ‌"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "atu (kuṭikkuka) mūlaṁ avarkk talavēdanayuṇṭāvukayēā, lahari bādhikkukayēā illa"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "avar iṣṭappeṭṭu teraññeṭukkunna tarattil peṭṭa paḻavargaṅṅaḷuṁ"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "avar keātikkunna tarattil peṭṭa pakṣimānsavuṁ keāṇṭ (avar cuṟṟi naṭakkuṁ)"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "viśālamāya nayanaṅṅaḷuḷḷa veḷutta taruṇikaḷuṁ. (avarkkuṇṭ‌)"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "(cippikaḷil) oḷiccu vekkappeṭṭa muttupēāleyuḷḷavar"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "avar pravartticc keāṇṭirunnatinuḷḷa pratiphalamāyikeāṇṭāṇ (atellāṁ nalkappeṭunnat‌)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "anāvaśyavākkēā kuṟṟappeṭuttalēā avar aviṭe vecc kēḷkkukayilla"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "samādhānaṁ! samādhānaṁ! ennuḷḷa vākkallāte"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "valatupakṣakkār! entāṇī valatupakṣakkāruṭe avastha"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "muḷḷilātta ilantamaraṁ"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "aṭukkaṭukkāyi kulakaḷuḷḷa vāḻa"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "viśālamāya taṇal"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "sadā oḻukkappeṭṭu keāṇṭirikkunna veḷḷaṁ"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "dhārāḷaṁ paḻavargaṅṅaḷ"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "nilaccu pēāvāttatuṁ taṭas'sappeṭṭupēāvāttatumāya"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "uyarnnamettakaḷ ennī sukhānubhavaṅṅaḷilāyirikkuṁ avar"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "tīrccayāyuṁ avare (svargastrīkaḷe) nāṁ oru pratyēka prakr̥tiyēāṭe sr̥ṣṭiccuṇṭākkiyirikkukayāṇ‌"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "aṅṅane avare nāṁ kan'yakamārākkiyirikkunnu"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "snēhavatikaḷuṁ samaprāyakkāruṁ ākkiyirikkunnu"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "valatupakṣakkārkk vēṇṭiyatre at‌"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "pūrvvikanmāril ninn oru vibhāgavuṁ"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "pingāmikaḷil ninn oru vibhāgavuṁ āyirikkuṁ avar"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "iṭatupakṣakkār, entāṇī iṭatupakṣakkāruṭe avastha"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "tuḷaccu kayaṟunna uṣṇakāṟṟ‌, cuṭṭutiḷakkunna veḷḷaṁ"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "karimpukayuṭe taṇal"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "taṇuppuḷḷatēā, sukhadāyakamēā allātta (ennī duritaṅṅaḷilāyirikkuṁ avar)"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "entukeāṇṭennāl tīrccayāyuṁ avar atinu mump sukhalēālupanmārāyirunnu"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "avar gurutaramāya pāpattil śaṭhiccunilkkunnavarumāyirunnu"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "avar iprakāraṁ paṟayukayuṁ ceytirunnu: ñaṅṅaḷ maricciṭṭ maṇṇuṁ asthiśakalaṅṅaḷumāyikkaḻiññiṭṭāṇēā ñaṅṅaḷ uyirtteḻunnēlpikkappeṭān pēākunnat‌"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "ñaṅṅaḷuṭe pūrvvikarāya pitākkaḷuṁ (uyirtteḻunnēlpikkappeṭumennēā)"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "nī paṟayuka: tīrccayāyuṁ pūrvvikaruṁ pilkkālakkāruṁ ellāṁ"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "oru niścita divasatte kr̥tyamāya oru avadhikk orumiccukūṭṭappeṭunnavar tanneyākunnu"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "enniṭṭ‌, hē; satyaniṣēdhikaḷāya durmārgikaḷē"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "tīrccayāyuṁ niṅṅaḷ oru vr̥kṣattil ninn atāyat sakhkhūmil ninn bhakṣikkunnavarākunnu"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "aṅṅane atil ninn vayaṟukaḷ niṟakkunnavaruṁ"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "atinṟe mīte tiḷaccupeāḷḷunna veḷḷattil ninn kuṭikkunnavarumākunnu"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "aṅṅane dāhiccu valañña oṭṭakaṁ kuṭikkunnapēāle kuṭikkunnavarākunnu"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "itāyirikkuṁ pratiphalattinṟe nāḷil avarkkuḷḷa salkkāraṁ"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "nāmāṇ niṅṅaḷe sr̥ṣṭiccirikkunnat‌. ennirikke niṅṅaḷentāṇ (enṟe sandēśaṅṅaḷe) satyamāyi aṅgīkarikkāttat‌"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "appēāḷ niṅṅaḷ sravikkunna śuklatteppaṟṟi niṅṅaḷ cinticcu nēākkiyiṭṭuṇṭēā"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "niṅṅaḷāṇēā at sr̥ṣṭiccuṇṭākkunnat‌. atalla, nāmāṇēā sr̥ṣṭikarttāv‌"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "nāṁ niṅṅaḷkkiṭayil maraṇaṁ kaṇakkākkiyirikkunnu. nāṁ orikkaluṁ tēālpikkappeṭunnavanalla"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "(niṅṅaḷkku) pakaraṁ niṅṅaḷe pēāluḷḷavare keāṇṭuvarikayuṁ. niṅṅaḷkk aṟivillātta vidhattil niṅṅaḷe (vīṇṭuṁ) sr̥ṣṭiccuṇṭākkukayuṁ ceyyunna kāryattil"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "ādyatavaṇa sr̥ṣṭikkappeṭṭatineppaṟṟi tīrccayāyuṁ niṅṅaḷ manas'silākkiyiṭṭuṇṭ‌. enniṭṭuṁ niṅṅaḷ entukeāṇṭ ālēāciccu nēākkunnilla"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "ennāl niṅṅaḷ kr̥ṣi ceyyunnatine paṟṟi niṅṅaḷ cinticcu nēākkiyiṭṭuṇṭēā"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "niṅṅaḷāṇēā at muḷappiccu vaḷarttunnat‌. atalla nāmāṇēā, at muḷappicc vaḷarttunnavan"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "nāṁ uddēśiccirunneṅkil at (viḷa) nāṁ turumpākkittīrkkumāyirunnu. appēāḷ niṅṅaḷ atiśayappeṭṭu paṟaññukeāṇēṭayirikkumāyirannu"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "tīrccayāyuṁ ñaṅṅaḷ kaṭabādhitar tanneyākunnu"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "alla, ñaṅṅaḷ (upajīvana mārgaṁ) taṭayappeṭṭavarākunnu enn‌"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "ini, niṅṅaḷ kuṭikkunna veḷḷatteppaṟṟi niṅṅaḷ cinticcu nēākkiyiṭṭuṇṭēā"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "niṅṅaḷāṇēā at mēghattin ninn iṟakkiyat‌? atalla, nāmāṇēā iṟakkiyavan"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "nāṁ uddēśiccirunneṅkil at nāṁ dus'svāduḷḷa uppuveḷḷamākkumāyirunnu. ennirikke niṅṅaḷ nandikāṇikkāttatentāṇ‌"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "niṅṅaḷ urasikattikkunnatāya tīyine paṟṟi niṅṅaḷ cinticcu nēākkiyiṭṭuṇṭēā"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "niṅṅaḷāṇēā atinṟe maraṁ sr̥ṣṭiccuṇṭākkiyat‌? atalla nāmāṇēā sr̥ṣṭiccuṇṭākkiyavan"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "nāṁ atine oru cintāviṣayamākkiyirikkunnu. daridrarāya sañcārikaḷkk oru jīvitasekaryavuṁ"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "ākayāl ninṟe mahānāya rakṣitāvinṟe nāmatte nī prakīrttikkuka"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "alla, nakṣatraṅṅaḷuṭe astamana sthānaṅṅaḷekeāṇṭ ñān satyaṁ ceytu paṟayunnu"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "tīrccayāyuṁ, niṅṅaḷkkaṟiyāmeṅkil, ateāru vampicca satyaṁ tanneyāṇ‌"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "tīrccayāyuṁ it ādaraṇīyamāya oru khur'ān tanneyākunnu"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "bhadramāyi sūkṣikkappeṭṭa oru rēkhayilākunnu at‌"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "pariśud'dhi nalkappeṭṭavarallāte at sparśikkukayilla"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "lēākarakṣitāviṅkal ninn avatarippikkappeṭṭatatre at‌"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "appēāḷ ī varttamānattinṟe kāryattilāṇēā niṅṅaḷ puṟampūcc kāṇikkunnat‌"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "satyatte niṣēdhikkuka ennat niṅṅaḷ niṅṅaḷuṭe vihitamākkukayāṇēā"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "ennāl at (jīvan) teāṇṭakkuḻiyil ettumpēāḷ entukeāṇṭāṇ (niṅṅaḷkkat piṭiccu nirttānākāttat‌)"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "niṅṅaḷ annēratt nēākkikkeāṇṭirikkumallēā"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "nāmāṇ ā vyaktiye sambandhicciṭattēāḷaṁ niṅṅaḷekkāḷuṁ aṭuttavan. pakṣe niṅṅaḷ kaṇṭaṟiyunnilla"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "appēāḷ niṅṅaḷ (daivika niyamattin‌) vidhēyarallāttavarāṇeṅkil"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "niṅṅaḷkkentukeāṇṭ at (jīvan) maṭakki eṭukkānāvunnilla; niṅṅaḷ satyavādikaḷāṇeṅkil"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "appēāḷ avan (mariccavan) sāmīpyaṁ sid'dhiccavaril peṭṭavanāṇeṅkil"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "(avann‌) āśvāsavuṁ viśiṣṭamāya upajīvanavuṁ sukhānubhūtiyuṭe svargattēāppuṁ uṇṭāyirikkuṁ"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "ennāl avan valatupakṣakkāril peṭṭavanāṇeṅkilēā"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "valatupakṣakkārilpeṭṭa ninakk samādhānaṁ ennāyirikkuṁ (avannu labhikkunna abhivādyaṁ)"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "ini avan durmārgikaḷāya satyaniṣēdhikaḷil peṭṭavanāṇeṅkilēā"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "cuṭṭutiḷakkunna veḷḷaṁ keāṇṭuḷḷa salkkāravuṁ"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "narakattil veccuḷḷa cuṭṭerikkalumāṇ‌. (avannuḷḷat‌)"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "tīrccayāyuṁ itu tanneyāṇ uṟappuḷḷa yāthārt'thyaṁ"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "ākayāl nī ninṟe mahānāya rakṣitāvinṟe nāmaṁ prakīrttikkuka"
        }
    ]
}