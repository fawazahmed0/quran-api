{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "إِنَّ شَجَرَتَ اَ۬لزَّقُّومِ"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "طَعَامُ اُ۬لۡأَثِيمِ"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "كَاَلۡمُهۡلِ تَغۡلِي فِي اِ۬لۡبُطُونِ"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "كَغَلۡيِ اِ۬لۡحَمِيمِ"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "خُذُوهُ فَاَعۡتِلُوهُ إِلَىٰ سَوَآءِ اِ۬لۡجَحِيمِ"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "ثُمَّ صُبُّواْ فَوۡقَ رَأۡسِهِۦ مِنۡ عَذَابِ اِ۬لۡحَمِيمِ"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "ذُقۡ إِنَّكَ أَنتَ اَ۬لۡعَزِيزُ اُ۬لۡكَرِيمُ"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "إِنَّ هَٰذَا مَا كُنتُم بِهِۦ تَمۡتَرُونَ"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "إِنَّ اَ۬لۡمُتَّقِينَ فِي مَقَامٍ أَمِين ࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "فِي جَنَّٰت ࣲ وَعُيُون ࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "يَلۡبَسُونَ مِن سُندُس ࣲ وَإِسۡتَبۡرَق ࣲ مُّتَقَٰبِلِينَ"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "كَذَٰلِكَ وَزَوَّجۡنَٰهُم بِحُورٍ عِين ࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "يَدۡعُونَ فِيهَا بِكُلِّ فَٰكِهَةٍ ءَامِنِينَ"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "لَا يَذُوقُونَ فِيهَا اَ۬لۡمَوۡتَ إِلَّا اَ۬لۡمَوۡتَةَ اَ۬لۡأُول ٜ يٰۖ وَوَقَىٰهُمۡ عَذَابَ اَ۬لۡجَحِيمِ"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "فَضۡل ࣰ ا مِّن رَّبِّكَۚ ذَٰلِكَ هُوَ اَ۬لۡفَوۡزُ اُ۬لۡعَظِيمُ"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "فَإِنَّمَا يَسَّرۡنَٰهُ بِلِسَانِكَ لَعَلَّهُمۡ يَتَذَكَّرُونَ"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "فَاَرۡتَقِبۡ إِنَّهُم مُّرۡتَقِبُونَ"
        }
    ]
