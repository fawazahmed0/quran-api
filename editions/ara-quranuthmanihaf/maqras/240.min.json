apter":109,"verse":4,"text":"وَلَآ أَنَا۠ عَابِدࣱ مَّا عَبَدتُّمۡ"},{"chapter":109,"verse":5,"text":"وَلَآ أَنتُمۡ عَٰبِدُونَ مَآ أَعۡبُدُ"},{"chapter":109,"verse":6,"text":"لَكُمۡ دِينُكُمۡ وَلِيَ دِينِ"},{"chapter":110,"verse":1,"text":"إِذَا جَآءَ نَصۡرُ ٱللَّهِ وَٱلۡفَتۡحُ"},{"chapter":110,"verse":2,"text":"وَرَأَيۡتَ ٱلنَّاسَ يَدۡخُلُونَ فِي دِينِ ٱللَّهِ أَفۡوَاجࣰ ا"},{"chapter":110,"verse":3,"text":"فَسَبِّحۡ بِحَمۡدِ رَبِّكَ وَٱسۡتَغۡفِرۡهُۚ إِنَّهُۥ كَانَ تَوَّابَۢا"},{"chapter":111,"verse":1,"text":"تَبَّتۡ يَدَآ أَبِي لَهَبࣲ وَتَبَّ"},{"chapter":111,"verse":2,"text":"مَآ أَغۡنَىٰ عَنۡهُ مَالُهُۥ وَمَا كَسَبَ"},{"chapter":111,"verse":3,"text":"سَيَصۡلَىٰ نَارࣰ ا ذَاتَ لَهَبࣲ‏"},{"chapter":111,"verse":4,"text":"وَٱمۡرَأَتُهُۥ حَمَّالَةَ ٱلۡحَطَبِ"},{"chapter":111,"verse":5,"text":"فِي جِيدِهَا حَبۡلࣱ مِّن مَّسَدِۭ"},{"chapter":112,"verse":1,"text":"قُلۡ هُوَ ٱللَّهُ أَحَدٌ"},{"chapter":112,"verse":2,"text":"ٱللَّهُ ٱلصَّمَدُ"},{"chapter":112,"verse":3,"text":"لَمۡ يَلِدۡ وَلَمۡ يُولَدۡ"},{"chapter":112,"verse":4,"text":"وَلَمۡ يَكُن لَّهُۥ كُفُوًا أَحَدُۢ"},{"chapter":113,"verse":1,"text":"قُلۡ أَعُوذُ بِرَبِّ ٱلۡفَلَقِ"},{"chapter":113,"verse":2,"text":"مِن شَرِّ مَا خَلَقَ"},{"chapter":113,"verse":3,"text":"وَمِن شَرِّ غَاسِقٍ إِذَا وَقَبَ"},{"chapter":113,"verse":4,"text":"وَمِن شَرِّ ٱلنَّفَّٰثَٰتِ فِي ٱلۡعُقَدِ"},{"chapter":113,"verse":5,"text":"وَمِن شَرِّ حَاسِدٍ إِذَا حَسَدَ"},{"chapter":114,"verse":1,"text":"قُلۡ أَعُوذُ بِرَبِّ ٱلنَّاسِ"},{"chapter":114,"verse":2,"text":"مَلِكِ ٱلنَّاسِ"},{"chapter":114,"verse":3,"text":"إِلَٰهِ ٱلنَّاسِ"},{"chapter":114,"verse":4,"text":"مِن شَرِّ ٱلۡوَسۡوَاسِ ٱلۡخَنَّاسِ"},{"chapter":114,"verse":5,"text":"ٱلَّذِي يُوَسۡوِسُ فِي صُدُورِ ٱلنَّاسِ"},{"chapter":114,"verse":6,"text":"مِنَ ٱلۡجِنَّةِ وَٱلنَّاسِ"}]}