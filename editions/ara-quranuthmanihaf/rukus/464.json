{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "كَذَّبَتۡ ثَمُودُ بِٱلنُّذُرِ"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "فَقَالُوٓاْ أَبَشَرࣰ ا مِّنَّا وَٰحِدࣰ ا نَّتَّبِعُهُۥٓ إِنَّآ إِذࣰ ا لَّفِي ضَلَٰلࣲ وَسُعُرٍ"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "أَءُلۡقِيَ ٱلذِّكۡرُ عَلَيۡهِ مِنۢ بَيۡنِنَا بَلۡ هُوَ كَذَّابٌ أَشِرࣱ‏"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "سَيَعۡلَمُونَ غَدࣰ ا مَّنِ ٱلۡكَذَّابُ ٱلۡأَشِرُ"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "إِنَّا مُرۡسِلُواْ ٱلنَّاقَةِ فِتۡنَةࣰ لَّهُمۡ فَٱرۡتَقِبۡهُمۡ وَٱصۡطَبِرۡ"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "وَنَبِّئۡهُمۡ أَنَّ ٱلۡمَآءَ قِسۡمَةُۢ بَيۡنَهُمۡۖ كُلُّ شِرۡبࣲ مُّحۡتَضَرࣱ‏"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "فَنَادَوۡاْ صَاحِبَهُمۡ فَتَعَاطَىٰ فَعَقَرَ"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "فَكَيۡفَ كَانَ عَذَابِي وَنُذُرِ"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "إِنَّآ أَرۡسَلۡنَا عَلَيۡهِمۡ صَيۡحَةࣰ وَٰحِدَةࣰ فَكَانُواْ كَهَشِيمِ ٱلۡمُحۡتَظِرِ"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "وَلَقَدۡ يَسَّرۡنَا ٱلۡقُرۡءَانَ لِلذِّكۡرِ فَهَلۡ مِن مُّدَّكِرࣲ‏"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "كَذَّبَتۡ قَوۡمُ لُوطِۭ بِٱلنُّذُرِ"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "إِنَّآ أَرۡسَلۡنَا عَلَيۡهِمۡ حَاصِبًا إِلَّآ ءَالَ لُوطࣲۖ نَّجَّيۡنَٰهُم بِسَحَرࣲ‏"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "نِّعۡمَةࣰ مِّنۡ عِندِنَاۚ كَذَٰلِكَ نَجۡزِي مَن شَكَرَ"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "وَلَقَدۡ أَنذَرَهُم بَطۡشَتَنَا فَتَمَارَوۡاْ بِٱلنُّذُرِ"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "وَلَقَدۡ رَٰوَدُوهُ عَن ضَيۡفِهِۦ فَطَمَسۡنَآ أَعۡيُنَهُمۡ فَذُوقُواْ عَذَابِي وَنُذُرِ"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "وَلَقَدۡ صَبَّحَهُم بُكۡرَةً عَذَابࣱ مُّسۡتَقِرࣱّ‏"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "فَذُوقُواْ عَذَابِي وَنُذُرِ"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "وَلَقَدۡ يَسَّرۡنَا ٱلۡقُرۡءَانَ لِلذِّكۡرِ فَهَلۡ مِن مُّدَّكِرࣲ‏"
        }
    ]
}