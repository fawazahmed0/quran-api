{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "إِذَا زُلۡزِلَتِ ٱلۡأَرۡضُ زِلۡزَالَهَا"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "وَأَخۡرَجَتِ ٱلۡأَرۡضُ أَثۡقَالَهَا"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "وَقَالَ ٱلۡإِنسَٰنُ مَا لَهَا"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "يَوۡمَئِذ ࣲ تُحَدِّثُ أَخۡبَارَهَا"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "بِأَنَّ رَبَّكَ أَوۡحَىٰ لَهَا"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "يَوۡمَئِذ ࣲ يَصۡدُرُ ٱلنَّاسُ أَشۡتَات ࣰ ا لِّيُرَوۡاْ أَعۡمَٰلَهُمۡ"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "فَمَن يَعۡمَلۡ مِثۡقَالَ ذَرَّةٍ خَيۡر ࣰ ا يَرَهُۥ"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "وَمَن يَعۡمَلۡ مِثۡقَالَ ذَرَّة ࣲ شَرّ ࣰ ا يَرَهُۥ"
        }
    ]
}