{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "ennāl avan aṟiyunnillē? khab‌ṟukaḷiluḷḷat iḷakkimaṟicc puṟatt keāṇṭ varappeṭukayuṁ"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "hr̥dayaṅṅaḷiluḷḷat veḷikk keāṇṭu varappeṭukayuṁ ceytāl"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "tīrccayāyuṁ avaruṭe rakṣitāv annē divasaṁ avare paṟṟi sūkṣmamāyi aṟiyunnavan tanneyākunnu"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "bhayaṅkaramāya ā sambhavaṁ"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "bhayaṅkaramāya sambhavaṁ ennāl entākunnu"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "bhayaṅkaramāya sambhavamennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "manuṣyanmār cinniccitaṟiya pāṟṟayeppēāle ākunna divasaṁ"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "parvvataṅṅaḷ kaṭañña āṭṭin rēāmaṁ pēāleyuṁ"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "appēāḷ ēteārāḷuṭe tulāsukaḷ ghanaṁ tūṅṅiyēā"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "avan santr̥ptamāya jīvitattilāyirikkuṁ"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "ennāl ēteārāḷuṭe tulāsukaḷ tūkkaṁ kuṟaññatāyēā"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "avanṟe saṅkētaṁ hāviyaḥ āyirikkuṁ"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "hāviyaḥ ennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "cūṭēṟiya narakāgniyatre at‌"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "parasparaṁ perumanaṭikkuka enna kāryaṁ niṅṅaḷe aśrad'dhayilākkiyirikkunnu"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "niṅṅaḷ śavakuṭīraṅṅaḷ sandarśikkunnat varēkkuṁ"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "nis'sanśayaṁ, niṅṅaḷ vaḻiye aṟiññ keāḷḷuṁ"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "pinneyuṁ nis'sanśayaṁ niṅṅaḷ vaḻiye aṟiññ keāḷḷuṁ"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "nis'sanśayaṁ, niṅṅaḷ dr̥ḍhamāya aṟiv aṟiyumāyirunneṅkil"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "jvalikkunna narakatte niṅṅaḷ kāṇuka tanne ceyyuṁ"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "pinne tīrccayāyuṁ niṅṅaḷ atine dr̥ḍhamāyuṁ kaṇṇāl kāṇuka tanne ceyyuṁ"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "pinnīṭ ā divasattil sukhānubhavaṅṅaḷe paṟṟi tīrccayāyuṁ niṅṅaḷ cēādyaṁ ceyyappeṭukatanne ceyyuṁ"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "kālaṁ tanneyāṇ satyaṁ"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "tīrccayāyuṁ manuṣyan naṣṭattil tanneyākunnu"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "viśvasikkukayuṁ salkarm'maṅṅaḷ pravarttikkukayuṁ, satyaṁ kaikkeāḷḷān an'yēān'yaṁ upadēśikkukayuṁ kṣama kaikkeāḷḷān an'yēān'yaṁ upadēśikkukayuṁ ceytavareāḻike"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "kuttuvākk paṟayunnavanuṁ avahēḷikkunnavanumāya ēteārāḷkkuṁ nāśaṁ"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "atāyat dhanaṁ śēkharikkukayuṁ at eṇṇinēākkikkeāṇṭirikkukayuṁ ceyyunnavan‌"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "avanṟe dhanaṁ avan śāśvata jīvitaṁ nalkiyirikkunnu enn avan vicārikkunnu"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "nis'sanśayaṁ, avan hutvamayil eṟiyappeṭuka tanne ceyyuṁ"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "hutvama ennāl entāṇenn ninakkaṟiyāmēā"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "at allāhuvinṟe jvalippikkappeṭṭa agniyākunnu"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "hr̥dayaṅṅaḷilēkk kattippaṭarunnatāya"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "tīrccayāyuṁ at avaruṭe mēl aṭaccumūṭappeṭunnatāyirikkuṁ"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "nīṭṭiyuṇṭākkappeṭṭa stambhaṅṅaḷilāyikkeāṇṭ‌"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "ānakkārekkeāṇṭ ninṟe rakṣitāv pravartticcat eṅṅane enn nī kaṇṭillē"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "avaruṭe tantraṁ avan piḻavilākkiyillē"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "kūṭṭaṅkūṭṭamāyikkeāṇṭuḷḷa pakṣikaḷe avaruṭe nērkk avan ayakkukayuṁ ceytu"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "cuṭṭupaḻuppicca kaḷimaṇkallukaḷkeāṇṭ avare eṟiyunnatāya"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "aṅṅane avan avare tinneāṭukkappeṭṭa vaikkēāl turumpupēāleyākki"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "khuṟaiś gēātratte kūṭṭiyiṇakkiyatināl"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "śaityakālatteyuṁ uṣṇakālatteyuṁ yātrayumāyi avare kūṭṭiyiṇakkiyatināl"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "ī bhavanattinṟe rakṣitāvine avar ārādhiccukeāḷḷaṭṭe"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "atāyat avarkk viśappinn āhāraṁ nalkukayuṁ, bhayattin pakaraṁ samādhānaṁ nalkukayuṁ ceytavane"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "matatte vyājamākkunnavan ārenn nī kaṇṭuvēā"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "anāthakkuṭṭiye taḷḷikkaḷayunnavanatre at‌"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "pāvappeṭṭavanṟe bhakṣaṇattinṟe kāryattil prēātsāhanaṁ naṭattātirikkukayuṁ ceyyunnavan"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "ennāl namaskārakkārkkākunnu nāśaṁ"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "taṅṅaḷuṭe namaskāratteppaṟṟi śrad'dhayillāttavarāya"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "janaṅṅaḷe kāṇikkān vēṇṭi pravarttikkunnavarāya"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "parēāpakāra vastukkaḷ muṭakkunnavarumāya"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "tīrccayāyuṁ ninakk nāṁ dhārāḷaṁ nēṭṭaṁ nalkiyirikkunnu"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "ākayāl nī ninṟe rakṣitāvin vēṇṭi namaskarikkukayuṁ baliyarppikkukayuṁ ceyyuka"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "tīrccayāyuṁ ninnēāṭ vidvēṣaṁ vecc pularttunnavan tanneyākunnu vālaṟṟavan (bhāviyillāttavan)"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "(nabiyē,) paṟayuka: aviśvāsikaḷē"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "niṅṅaḷ ārādhiccuvarunnatine ñān ārādhikkunnilla"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "ñān ārādhiccuvarunnatine niṅṅaḷuṁ ārādhikkunnavaralla"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "niṅṅaḷ ārādhiccuvannatine ñān ārādhikkān pēākunnavanumalla"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "ñān ārādhiccu varunnatine niṅṅaḷuṁ ārādhikkān pēākunnavaralla"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "niṅṅaḷkk niṅṅaḷuṭe mataṁ. enikk enṟe matavuṁ"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "allāhuvinṟe sahāyavuṁ vijayavuṁ vannukiṭṭiyāl"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "janaṅṅaḷ allāhuvinṟe matattil kūṭṭaṅkūṭṭamāyi pravēśikkunnat nī kāṇukayuṁ ceytāl"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "ninṟe rakṣitāvine stutikkunnatēāṭeāppaṁ nī avane prakīrttikkukayuṁ, nī avanēāṭ pāpamēācanaṁ tēṭukayuṁ ceyyuka. tīrccayāyuṁ avan paścāttāpaṁ svīkarikkunnavanākunnu"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "abūlahabinṟe irukaikaḷuṁ naśiccirikkunnu. avan nāśamaṭayukayuṁ ceytirikkunnu"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "avanṟe dhanamēā avan sampādiccuveccatēā avanu upakārappeṭṭilla"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "tījvālakaḷuḷḷa narakāgniyil avan pravēśikkunnatāṇ‌"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "viṟakucumaṭṭukāriyāya avanṟe bhāryayuṁ"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "avaḷuṭe kaḻuttil īntappananārukeāṇṭuḷḷa oru kayaṟuṇṭāyirikkuṁ"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "(nabiyē,) paṟayuka: kāryaṁ allāhu ēkanāṇ ennatākunnu"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "allāhu ēvarkkuṁ āśrayamāyiṭṭuḷḷavanākunnu"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "avan (ārkkuṁ) janmaṁ nalkiyiṭṭilla. (āruṭeyuṁ santatiyāyi) janicciṭṭumilla"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "avann tulyanāyi āruṁ illatānuṁ"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "paṟayuka: pulariyuṭe rakṣitāvinēāṭ ñān śaraṇaṁ tēṭunnu"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "avan sr̥ṣṭiccuṭṭuḷḷavayuṭe keṭutiyil ninn‌"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "iruḷaṭayumpēāḻuḷḷa rātriyuṭe keṭutiyilninnuṁ"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "keṭṭukaḷil ūtunna strīkaḷuṭe keṭutiyilninnuṁ"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "asūyālu asūyappeṭumpēāḷ avanṟe keṭutiyilninnuṁ"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "paṟayuka: manuṣyaruṭe rakṣitāvinēāṭ ñān śaraṇaṁ tēṭunnu"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "manuṣyaruṭe rājāvinēāṭ‌"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "manuṣyaruṭe daivattēāṭ‌"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "durbēādhanaṁ naṭatti pinmāṟikkaḷayunnavarekkeāṇṭuḷḷa keṭutiyil ninn‌"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "manuṣyaruṭe hr̥dayaṅṅaḷil durbēādhanaṁ naṭattunnavar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "manuṣyariluṁ jinnukaḷiluṁ peṭṭavar"
        }
    ]
}