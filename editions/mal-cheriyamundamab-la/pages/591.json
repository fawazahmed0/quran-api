{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "akasam tanneyana, ratriyil varunnatu tanneyana satyam"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "ratriyil varunnat ennal entanenn ninakkariyumea"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "tulacc kayarunna naksatramatre at‌"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "tanre karyattil oru melneattakkaranuntayikkeantallate yatearalumilla"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "ennal manusyan cinticcu neakkatte tan entil ninnan srstikkappettirikkunnat enn‌"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "tericcu vilunna oru dravakattil ninnatre avan srstikkappettirikkunnat‌"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "mutukellinum, variyellukalkkumitayil ninn at purattu varunnu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "avane (manusyane) tiriccukeantu varan tirccayayum avan (allahu) kalivullavanakunnu"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "rahasyannal pariseadhikkappetunna divasam"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "appeal avan (manusyan‌) yatearu saktiyea, sahayiyea untayirikkukayilla"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "avartticc malapeyyikkunna akasattekkeantum"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "sasyalatadikal mulappikkunna bhumiyekkeantum satyam"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "tirccayayum itu nirnayakamaya oru vakkakunnu"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "itu tamasayalla"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "tirccayayum avar (valiya) tantram prayeagiccu keantirikkum"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "nanum (valiya) tantram prayeagiccu keantirikkum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "akayal (nabiye,) ni satyanisedhikalkk kalatamasam nalkuka. alpasamayattekk avarkk tamasam nalkiyekkuka"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "atyunnatanaya ninre raksitavinre namam prakirttikkuka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "srstikkukayum, sanvidhanikkukayum ceyta (raksitavinre)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "vyavastha nirnayiccu margadarsanam nalkiyavanum"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "meccil purannal ulpadippiccavanum"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "ennitt atine unannikkarinna cavarakki tirttavanumaya (raksitavinre namam)"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ninakk nam otittaram. ni marannupeakukayilla"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allahu uddesiccatealike. tirccayayum avan parasyamayatum, rahasyamayirikkunnatum ariyunnu"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "kututal eluppamullatilekk ninakk nam sekaryamuntakkittarunnatuman‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "atinal upadesam phalappetunnuvenkil ni upadesiccu kealluka"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "bhayappetunnavar upadesam svikariccu keallunnatan‌"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "erravum nirbhagyavanayittullavan atine (upadesatte) vittakannu peakunnatan‌"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "valiya agniyil katann eriyunnavanatre avan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pinnit avan atil marikkukayilla. jivikkukayumilla"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "tirccayayum parisud'dhi netiyavar vijayam prapiccu"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "tanre raksitavinre namam smarikkukayum ennitt namaskarikkukayum (ceytavan)"
        }
    ]
}