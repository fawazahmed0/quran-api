{
    "chapter": [
        {
            "chapter": 44,
            "verse": 1,
            "text": "Ha-Mim"
        },
        {
            "chapter": 44,
            "verse": 2,
            "text": "Wa Al-Kitabi Al-Mubini"
        },
        {
            "chapter": 44,
            "verse": 3,
            "text": "Inna 'Anzalnahu Fi Laylatin Mubarakatin 'Inna Kunna Mundhirina"
        },
        {
            "chapter": 44,
            "verse": 4,
            "text": "Fiha Yufraqu Kullu 'Amrin Hakimin"
        },
        {
            "chapter": 44,
            "verse": 5,
            "text": "Amraan Min `Indina 'Inna Kunna Mursilina"
        },
        {
            "chapter": 44,
            "verse": 6,
            "text": "Rahmatan Min Rabbika 'Innahu Huwa As-Sami`u Al-`Alimu"
        },
        {
            "chapter": 44,
            "verse": 7,
            "text": "Rabbi As-Samawati Wa Al-'Ari Wa Ma Baynahuma 'In Kuntum Muqinina"
        },
        {
            "chapter": 44,
            "verse": 8,
            "text": "La 'Ilaha 'Illa Huwa Yuhyi Wa Yumitu Rabbukum Wa Rabbu 'Aba'ikumu Al-'Awwalina"
        },
        {
            "chapter": 44,
            "verse": 9,
            "text": "Bal Hum Fi Shakkin Yal`abuna"
        },
        {
            "chapter": 44,
            "verse": 10,
            "text": "Fartaqib Yawma Ta'ti As-Sama'u Bidukhanin Mubinin"
        },
        {
            "chapter": 44,
            "verse": 11,
            "text": "Yaghsha An-Nasa Hadha `Adhabun 'Alimun"
        },
        {
            "chapter": 44,
            "verse": 12,
            "text": "Rabbana Akshif `Anna Al-`Adhaba 'Inna Mu'uminuna"
        },
        {
            "chapter": 44,
            "verse": 13,
            "text": "Anna Lahumu Adh-Dhikra Wa Qad Ja'ahum Rasulun Mubinun"
        },
        {
            "chapter": 44,
            "verse": 14,
            "text": "Thumma Tawallaw `Anhu Wa Qalu Mu`allamun Majnunun"
        },
        {
            "chapter": 44,
            "verse": 15,
            "text": "Inna Kashifu Al-`Adhabi Qalilaan 'Innakum `A'iduna"
        },
        {
            "chapter": 44,
            "verse": 16,
            "text": "Yawma Nabtishu Al-Batshata Al-Kubra 'Inna Muntaqimuna"
        },
        {
            "chapter": 44,
            "verse": 17,
            "text": "Wa Laqad Fatanna Qablahum Qawma Fir`awna Wa Ja'ahum Rasulun Karimun"
        },
        {
            "chapter": 44,
            "verse": 18,
            "text": "An 'Addu 'Ilayya `Ibada Allahi 'Inni Lakum Rasulun 'Aminun"
        },
        {
            "chapter": 44,
            "verse": 19,
            "text": "Wa 'An La Ta`lu `Ala Allahi 'Inni 'Atikum Bisultanin Mubinin"
        },
        {
            "chapter": 44,
            "verse": 20,
            "text": "Wa 'Inni `Udhtu Birabbi Wa Rabbikum 'An Tarjumuni"
        },
        {
            "chapter": 44,
            "verse": 21,
            "text": "Wa 'In Lam Tu'uminu Li Fa`taziluni"
        },
        {
            "chapter": 44,
            "verse": 22,
            "text": "Fada`a Rabbahu 'Anna Ha'uula' Qawmun Mujrimuna"
        },
        {
            "chapter": 44,
            "verse": 23,
            "text": "Fa'asri Bi`ibadi Laylaan 'Innakum Muttaba`una"
        },
        {
            "chapter": 44,
            "verse": 24,
            "text": "Wa Atruki Al-Bahra Rahwan 'Innahum Jundun Mughraquna"
        },
        {
            "chapter": 44,
            "verse": 25,
            "text": "Kam Taraku Min Jannatin Wa `Uyunin"
        },
        {
            "chapter": 44,
            "verse": 26,
            "text": "Wa Zuru`in Wa Maqamin Karimin"
        },
        {
            "chapter": 44,
            "verse": 27,
            "text": "Wa Na`matin Kanu Fiha Fakihina"
        },
        {
            "chapter": 44,
            "verse": 28,
            "text": "Kadhalika Wa 'Awrathnaha Qawmaan 'Akharina"
        },
        {
            "chapter": 44,
            "verse": 29,
            "text": "Fama Bakat `Alayhimu As-Sama'u Wa Al-'Aru Wa Ma Kanu Munzarina"
        },
        {
            "chapter": 44,
            "verse": 30,
            "text": "Wa Laqad Najjayna Bani 'Isra'ila Mina Al-`Adhabi Al-Muhini"
        },
        {
            "chapter": 44,
            "verse": 31,
            "text": "Min Fir`awna 'Innahu Kana `Aliaan Mina Al-Musrifina"
        },
        {
            "chapter": 44,
            "verse": 32,
            "text": "Wa Laqadi Akhtarnahum `Ala `Ilmin `Ala Al-`Alamina"
        },
        {
            "chapter": 44,
            "verse": 33,
            "text": "Wa 'Ataynahum Mina Al-'Ayati Ma Fihi Bala'un Mubinun"
        },
        {
            "chapter": 44,
            "verse": 34,
            "text": "Inna Ha'uula' Layaquluna"
        },
        {
            "chapter": 44,
            "verse": 35,
            "text": "In Hiya 'Illa Mawtatuna Al-'Ula Wa Ma Nahnu Bimunsharina"
        },
        {
            "chapter": 44,
            "verse": 36,
            "text": "Fa'tu Bi'aba'ina 'In Kuntum Sadiqina"
        },
        {
            "chapter": 44,
            "verse": 37,
            "text": "Ahum Khayrun 'Am Qawmu Tubba`in Wa Al-Ladhina Min Qablihim 'Ahlaknahum 'Innahum Kanu Mujrimina"
        },
        {
            "chapter": 44,
            "verse": 38,
            "text": "Wa Ma Khalaqna As-Samawati Wa Al-'Ara Wa Ma Baynahuma La`ibina"
        },
        {
            "chapter": 44,
            "verse": 39,
            "text": "Ma Khalaqnahuma 'Illa Bil-Haqqi Wa Lakinna 'Aktharahum La Ya`lamuna"
        },
        {
            "chapter": 44,
            "verse": 40,
            "text": "Inna Yawma Al-Fasli Miqatuhum 'Ajma`ina"
        },
        {
            "chapter": 44,
            "verse": 41,
            "text": "Yawma La Yughni Mawlaan `An Mawlaan Shay'aan Wa La Hum Yunsaruna"
        },
        {
            "chapter": 44,
            "verse": 42,
            "text": "Illa Man Rahima Allahu 'Innahu Huwa Al-`Azizu Ar-Rahimu"
        },
        {
            "chapter": 44,
            "verse": 43,
            "text": "Inna Shajarata Az-Zaqqumi"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Ta`amu Al-'Athimi"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Kalmuhli Yaghli Fi Al-Butuni"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Kaghalyi Al-Hamimi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Khudhuhu Fa`tiluhu 'Ila Sawa'i Al-Jahimi"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Thumma Subbu Fawqa Ra'sihi Min `Adhabi Al-Hamimi"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Dhuq 'Innaka 'Anta Al-`Azizu Al-Karimu"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Inna Hadha Ma Kuntum Bihi Tamtaruna"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Inna Al-Muttaqina Fi Maqamin 'Aminin"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Fi Jannatin Wa `Uyunin"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Yalbasuna Min Sundusin Wa 'Istabraqin Mutaqabilina"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Kadhalika Wa Zawwajnahum Bihurin `Inin"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Yad`una Fiha Bikulli Fakihatin 'Aminina"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "La Yadhuquna Fiha Al-Mawta 'Illa Al-Mawtata Al-'Ula Wa Waqahum `Adhaba Al-Jahimi"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Falaan Min Rabbika Dhalika Huwa Al-Fawzu Al-`Azimu"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Fa'innama Yassarnahu Bilisanika La`allahum Yatadhakkaruna"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Fartaqib 'Innahum Murtaqibuna"
        }
    ]
}