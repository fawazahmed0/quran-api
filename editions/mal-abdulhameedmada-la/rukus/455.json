{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "saktiyayi (peati) vitarikkeantirikkunnava (karrukal) tanneyana, satyam"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "(jala) bharam vahikkunna (meghannal) tanneyana, satyam"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "nisprayasam sancarikkunnava (kappalukal) tanneyana, satyam"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "karyannal vibhajiccu keatukkunnavar (malakkukal) tanneyana, satyam"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "tirccayayum ninnalkku takkit nalkappetunna karyam satyamayittullat tanneyakunnu"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "tirccayayum n'yayavidhi sambhavikkunnatu tanneyakunnu"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "vividha pathannalulla akasam tanneyana,satyam"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "tirccayayum ninnal vibhinnamaya abhiprayattilakunnu"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "(satyattil ninn‌) terrikkappettavan atil ninn (khur'anil ninn‌) terrikkappetunnu"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "uhapeahakkar sapikkappetatte"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "vivarakketil matimarannu kaliyunnavar"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "n'yayavidhiyute nal eppealayirikkum ennavar ceadikkunnu"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "narakagniyil avar pariksanattin vidheyarakunna divasamatre at‌"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "(avareat parayappetum:) ninnalkkulla pariksanam ninnal anubhavicc kealluvin. ninnal enteannin dhrtikuttikkeantirunnuvea atatre it‌"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "tirccayayum suksmata palikkunnavar svargatteappukalilum aruvikalilumayirikkum"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "avarkk avarute raksitav nalkiyat erruvannikkeant‌. tirccayayum avar atinu mump sad‌vrttarayirunnu"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "ratriyil ninn alpabhagame avar urannaruntayirunnullu"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "ratriyute antyavelakalil avar papameacanam tetunnavarayirunnu"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "avarute svattukkalilakatte ceadikkunnavannum (upajivanam) tatayappettavannum oru avakasamuntayirikkukayum ceyyum"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "drdhavisvasamullavarkk bhumiyil pala drstantannalumunt‌"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "ninnalil tanneyum (pala drstantannalunt‌.)ennitt ninnal kantariyunnille"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "akasatt ninnalkkulla upajivanavum, ninnaleat vagdanam ceyyappetunna karyannalumunt‌"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "ennal akasattinreyum bhumiyuteyum raksitavine tanneyana, satyam! ninnal sansarikkunnu ennatu peale tirccayayum it satyamakunnu"
        }
    ]
}