{"pages":[{"chapter":68,"verse":16,"text":"سنسمه على الخرطوم"},{"chapter":68,"verse":17,"text":"انا بلونهم كما بلونا اصحب الجنة اذ اقسموا ليصرمنها مصبحين"},{"chapter":68,"verse":18,"text":"ولا يستثنون"},{"chapter":68,"verse":19,"text":"فطاف عليها طايف من ربك وهم نايمون"},{"chapter":68,"verse":20,"text":"فاصبحت كالصريم"},{"chapter":68,"verse":21,"text":"فتنادوا مصبحين"},{"chapter":68,"verse":22,"text":"ان اغدوا على حرثكم ان كنتم صرمين"},{"chapter":68,"verse":23,"text":"فانطلقوا وهم يتخفتون"},{"chapter":68,"verse":24,"text":"ان لا يدخلنها اليوم عليكم مسكين"},{"chapter":68,"verse":25,"text":"وغدوا على حرد قدرين"},{"chapter":68,"verse":26,"text":"فلما راوها قالوا انا لضالون"},{"chapter":68,"verse":27,"text":"بل نحن محرومون"},{"chapter":68,"verse":28,"text":"قال اوسطهم الم اقل لكم لولا تسبحون"},{"chapter":68,"verse":29,"text":"قالوا سبحن ربنا انا كنا ظلمين"},{"chapter":68,"verse":30,"text":"فاقبل بعضهم على بعض يتلومون"},{"chapter":68,"verse":31,"text":"قالوا يويلنا انا كنا طغين"},{"chapter":68,"verse":32,"text":"عسى ربنا ان يبدلنا خير ا منها انا الى ربنا رغبون"},{"chapter":68,"verse":33,"text":"كذلك العذاب ولعذاب الاخرة اكبر لو كانوا يعلمون"},{"chapter":68,"verse":34,"text":"ان للمتقين عند ربهم جنت النعيم"},{"chapter":68,"verse":35,"text":"افنجعل المسلمين كالمجرمين"},{"chapter":68,"verse":36,"text":"ما لكم كيف تحكمون"},{"chapter":68,"verse":37,"text":"ام لكم كتب فيه تدرسون"},{"chapter":68,"verse":38,"text":"ان لكم فيه لما تخيرون"},{"chapter":68,"verse":39,"text":"ام لكم ايمن علينا بلغة الى يوم القيمة ان لكم لما تحكمون"},{"chapter":68,"verse":40,"text":"سلهم ايهم بذلك زعيم"},{"chapter":68,"verse":41,"text":"ام لهم شركاء فلياتوا بشركايهم ان كانوا صدقين"},{"chapter":68,"verse":42,"text":"يوم يكشف عن ساق ويدعون الى السجود فلا يستطيعون"}]}