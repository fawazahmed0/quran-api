{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "ߌ ߡߊ߰ߙߌ߬ ߞߘߐߕߊ߬ߣߍ߲߬ߓߊ ߕߐ߮ ߛߊߣߌ߲ߧߊ߫"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "ߡߍ߲ ߞߊ߬ ߘߊ߲ߠߌ߲ ߞߍ߫ ߞߵߊ߬ ߟߊߞߢߊ߫"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "ߊ߬ ߣߌ߫ ߡߍ߲ ߞߊ߬ ( ߝߋ߲ ߓߍ߯ ߢߊ߬ߞߏ߫ ) ߟߊߕߍ߰ ߞߵߊ߬ߟߎ߬ ߞߊ߲ߘߊ߫ ( ߏ ߡߊ߬)"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "ߊ߬ ߣߌ߫ ߡߍ߲ ߞߊ߬ ߖߍߥߎߟߍ ߟߊߓߐ߫"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "ߊ߬ ߣߊ߬ ߘߴߏ߬ ߞߍ߫ ߢߊ߰ߛߊ߬ ߖߊߙߊ߲߫ ߝߌ߲߬ߣߍ߲ ߘߌ߫"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ߊ߲ ߘߌߣߵߌ ߟߊߓߌ߬ߟߊ߬ ( ߞߏ ߟߎ߬ ߟߊ߫ ) ߝߏ߫ ߌ ߕߍ߫ ߢߌ߬ߣߊ߬"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "ߝߏ߫ ߡߍ߲ ( ߞߐߢߌ߬ߣߊ ) ߓߊ߯ ߊߟߊ߫ ߘߌߦߊ߫ ߸ ߓߊ ߏ߬ ߟߋ ߞߊ߬ ߟߊ߲ߞߣߍߡߊ ߟߐ߲߫ ߊ߬ ߣߌ߫ ߡߍ߲ ߦߋ߫ ߘߏ߲߰ ߠߊ߫"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "ߊ߬ ߣߴߊ߲ ߘߌߣߵߌ ߓߍ߲߬ ߌ ߛߋ߲߬ߡߊ߬ ߣߐ߰ߦߊ߬ ߘߐ߫"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "ߒ߬ߓߊ߬ ߌߟߋ ߦߋ߫ ߦߟߌߟߊߓߌߟߊ ߞߍ߫ ߗߐ߫ ߸ ߣߌ߫ ߦߟߌߟߊߓߌߟߊ ߞߊ߬ ߞߏߢߊ߬"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(ߊߟߊߞߏ ) ߢߍ߬ߣߍ߲߬ߕߐ ߘߌ߫ ߞߊ߬ߥߊ߲߬ߘߌ߫ ( ߊ߬ ߟߊ߫)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "ߞߎ߬ߠߊ߲߬ߜߏ߬ߓߊ ߞߏ߬ߣߌ߲߬ ߘߴߊ߬ ߡߊߓߐ߫ ߊ߬ ߟߊ߫"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "ߏ߬ ߡߍ߲ ߘߏ߲߬ߕߐ߫ ߕߊ߫ ߓߟߋ߬ߓߟߋ ߘߐ߫"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ߊ߬ ߕߍ߫ ߛߊ߬ ߦߋ߲߬ ߏ߬ ߞߐ߫ ߊ߬ ߘߏ߲߬ ߕߍ߫ ߢߣߊߡߦߊ߫"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "ߡߍ߲ ߓߊ߯ ߊ߬ ߖߘߍ߬ ߛߊߣߌ߲ߧߊ߫ ߏ߬ ߟߋ ߓߘߊ߫ ߛߎߘߊ߲߫"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "ߊ߬ ߣߌ߫ ߡߍ߲ ߞߵߊ߬ ߡߊ߰ߙߌ ߕߐ߮ ߝߐ߫ ߞߊ߬ ߛߊߟߌ߫"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "ߤߋߦߌ߬ ߸ ߊߟߎ߫ ߦߋ߫ ߘߎߢߊ߫ ߢߣߊߡߦߊ ߟߋ߬ ߛߎߥߊ߲ߘߌ߫ ߟߊ߫ ߓߊ߬؟"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "ߟߊ߬ߓߊ߲ ( ߛߏ ) ߕߊ ߟߋ߬ ߘߏ߲߬ ߦߊ߯ ߝߌ߬ߛߊ߬ ߸ ߏ߬ ߟߋ ߦߋ߫ ߕߏ߫ ߟߴߊ߬ ߡߊ߬"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "(ߞߎߡߊ ) ߣߌ߲߬ ߦߋ߫ ߞߝߊ߬ ߝߟߐߝߟߐ ߟߎ߬ ߞߣߐ߫"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ߌߓߎ߬ߙߊ߬ߤߌߡߊ߫ ߟߊ߫ ߞߊ߬ߝߊ ߣߌ߫ ߡߎߛߊ߫ ߕߊ ߞߊ߬ߣߌ߲߫"
        }
    ]
}