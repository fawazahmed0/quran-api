{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "ۖ لَآ أُقْسِمُ بِيَوْمِ اِ۬لْقِيَٰمَةِ"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "وَلَآ أُقْسِمُ بِالنَّفْسِ اِ۬للَّوَّامَةِۖ"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "أَيَحْسِبُ اُ۬لِانسَٰنُ أَلَّن نَّجْمَعَ عِظَامَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "بَل۪يٰۖ قَٰدِرِينَ عَلَيٰٓ أَن نُّسَوِّيَ بَنَانَهُۥۖ"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بَلْ يُرِيدُ اُ۬لِانسَٰنُ لِيَفْجُرَ أَمَامَهُۥۖ"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "يَسْـَٔلُ أَيَّانَ يَوْمُ اُ۬لْقِيَٰمَةِۖ"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "فَإِذَا بَرَقَ اَ۬لْبَصَرُ"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "وَخَسَفَ اَ۬لْقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "وَجُمِعَ اَ۬لشَّمْسُ وَالْقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "يَقُولُ اُ۬لِانسَٰنُ يَوْمَئِذٍ اَيْنَ اَ۬لْمَفَرُّۖ"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "كَلَّا لَا وَزَرَۖ"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "إِلَيٰ رَبِّكَ يَوْمَئِذٍ اِ۬لْمُسْتَقَرُّۖ"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "يُنَبَّؤُاْ اُ۬لِانسَٰنُ يَوْمَئِذِۢ بِمَا قَدَّمَ وَأَخَّرَۖ"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "بَلِ اِ۬لِانسَٰنُ عَلَيٰ نَفْسِهِۦ بَصِيرَة ࣱ‏"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "وَلَوَ اَلْق۪يٰ مَعَاذِيرَهُۥۖ"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "لَا تُحَرِّكْ بِهِۦ لِسَانَكَ لِتَعْجَلَ بِهِۦٓۖ"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "إِنَّ عَلَيْنَا جَمْعَهُۥ وَقُرْءَانَهُۥۖ"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "فَإِذَا قَرَأْنَٰهُ فَاتَّبِعْ قُرْءَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "ثُمَّ إِنَّ عَلَيْنَا بَيَانَهُۥۖ"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "كَلَّا بَلْ تُحِبُّونَ اَ۬لْعَاجِلَةَ"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "وَتَذَرُونَ اَ۬لَاخِرَةَۖ"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "وُجُوه ࣱ يَوْمَئِذ ࣲ نَّاضِرَةٌ"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "اِلَيٰ رَبِّهَا نَاظِرَة ࣱ ۖ"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "وَوُجُوه ࣱ يَوْمَئِذِۢ بَاسِرَة ࣱ‏"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "تَظُنُّ أَنْ يُّفْعَلَ بِهَا فَاقِرَة ࣱ ۖ"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "كَلَّآ إِذَا بَلَغَتِ اِ۬لتَّرَاقِيَ"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "وَقِيلَ مَن رَّاق ࣲ‏"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "وَظَنَّ أَنَّهُ اُ۬لْفِرَاقُ"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "وَالْتَفَّتِ اِ۬لسَّاقُ بِالسَّاقِ"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "إِلَيٰ رَبِّكَ يَوْمَئِذٍ اِ۬لْمَسَاقُۖ"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "فَلَا صَدَّقَ وَلَا صَلّ۪يٰۖ"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "وَلَٰكِن كَذَّبَ وَتَوَلّ۪يٰۖ"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "ثُمَّ ذَهَبَ إِلَيٰٓ أَهْلِهِۦ يَتَمَطّ۪يٰٓۖ"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "أَوْل۪يٰ لَكَ فَأَوْل۪يٰ"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "ثُمَّ أَوْل۪يٰ لَكَ فَأَوْل۪يٰٓۖ"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "أَيَحْسِبُ اُ۬لِانسَٰنُ أَنْ يُّتْرَكَ سُديًۖ"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "اَلَمْ يَكُ نُطْفَة ࣰ مِّن مَّنِيّ ࣲ تُمْن۪يٰ"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "ثُمَّ كَانَ عَلَقَة ࣰ فَخَلَقَ فَسَوّ۪يٰ"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "فَجَعَلَ مِنْهُ اُ۬لزَّوْجَيْنِ اِ۬لذَّكَرَ وَالُانث۪يٰٓۖ"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "أَلَيْسَ ذَٰلِكَ بِقَٰدِرٍ عَلَيٰٓ أَنْ يُّحْـِۧيَ اَ۬لْمَوْت۪يٰۖ"
        }
    ]
}