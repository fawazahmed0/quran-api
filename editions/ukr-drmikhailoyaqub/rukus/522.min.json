{"rukus":[{"chapter":80,"verse":1,"text":"Насупився та відвернувся він"},{"chapter":80,"verse":2,"text":"бо підійшов до нього сліпий"},{"chapter":80,"verse":3,"text":"А звідки тобі знати, можливо, очистився б він"},{"chapter":80,"verse":4,"text":"Чи запам’ятав би наставництво, і воно було б корисне йому"},{"chapter":80,"verse":5,"text":"А тому, хто багатий"},{"chapter":80,"verse":6,"text":"ти йому приділяєш увагу"},{"chapter":80,"verse":7,"text":"Хоча не тобі відповідати за те, що не очиститься він"},{"chapter":80,"verse":8,"text":"А хто приходить до тебе, поспішаючи"},{"chapter":80,"verse":9,"text":"та ще й з острахом"},{"chapter":80,"verse":10,"text":"то ти нехтуєш ним"},{"chapter":80,"verse":11,"text":"Та ж ні! Воістину, це — нагадування"},{"chapter":80,"verse":12,"text":"І хто бажає, той згадає його"},{"chapter":80,"verse":13,"text":"У сувоях шанованих"},{"chapter":80,"verse":14,"text":"піднесених і пречистих"},{"chapter":80,"verse":15,"text":"у руках писарів"},{"chapter":80,"verse":16,"text":"шляхетних і праведних"},{"chapter":80,"verse":17,"text":"Хай згине людина! Яка ж невдячна вона"},{"chapter":80,"verse":18,"text":"З чого створив Він її"},{"chapter":80,"verse":19,"text":"З краплі сім’я створив Він її та розмірив"},{"chapter":80,"verse":20,"text":"Потім полегшив Він шлях її"},{"chapter":80,"verse":21,"text":"згодом зробив її мертвою і поховав її"},{"chapter":80,"verse":22,"text":"потім, коли побажає, воскресить її"},{"chapter":80,"verse":23,"text":"Та ж ні! Не виконує вона того, що наказав Він їй"},{"chapter":80,"verse":24,"text":"Хай погляне людина на їжу свою"},{"chapter":80,"verse":25,"text":"Проливаємо Ми дощі зливами"},{"chapter":80,"verse":26,"text":"потім розколюємо Ми землю тріщинами"},{"chapter":80,"verse":27,"text":"і пророщуємо на ній зерно"},{"chapter":80,"verse":28,"text":"виноград і трави"},{"chapter":80,"verse":29,"text":"і оливи, і пальми"},{"chapter":80,"verse":30,"text":"і сади густі"},{"chapter":80,"verse":31,"text":"і плоди, і пасовиська –"},{"chapter":80,"verse":32,"text":"на користь вам і худобі вашій"},{"chapter":80,"verse":33,"text":"І коли пролунає глас"},{"chapter":80,"verse":34,"text":"у День той чоловік покине свого брата"},{"chapter":80,"verse":35,"text":"і матір, і батька"},{"chapter":80,"verse":36,"text":"і дружину свою, і дітей своїх"},{"chapter":80,"verse":37,"text":"у кожної людини в той День своя справа, яка цілком захопить її"},{"chapter":80,"verse":38,"text":"Обличчя одних у той День будуть сяяти"},{"chapter":80,"verse":39,"text":"сміючись та радіючи"},{"chapter":80,"verse":40,"text":"а на обличчі інших у День той буде пил"},{"chapter":80,"verse":41,"text":"який вкриє їх чорнотою"},{"chapter":80,"verse":42,"text":"Оце вони — невіруючі нечестивці"}]}