{"chapter":[{"chapter":87,"verse":1,"text":"Senin innde joom Ma ɓurnde toowde"},{"chapter":87,"verse":2,"text":"Oon takɗo O fonndi"},{"chapter":87,"verse":3,"text":"Oon koddirɗo refti O feewni"},{"chapter":87,"verse":4,"text":"Oon yaltinɗo durngol"},{"chapter":87,"verse":5,"text":"O watti ngol yoorko wayliiko"},{"chapter":87,"verse":6,"text":"Ma Min njanngin Ma A yeɓjjittah"},{"chapter":87,"verse":7,"text":"Si wonah ko Alla haaji pellet hombo anndi ko feeñi e ko wirnii"},{"chapter":87,"verse":8,"text":"Min newnan Ma na newori"},{"chapter":87,"verse":9,"text":"Siftinir ɗoon ɗo ciftanirgol na nafata"},{"chapter":87,"verse":10,"text":"Ma waacta oon kulɗo Alla"},{"chapter":87,"verse":11,"text":"Woɗɗitoo mbo ɓurɗo hiiteede"},{"chapter":87,"verse":12,"text":"Oon naatoowo yiite mannge nge"},{"chapter":87,"verse":13,"text":"Refti o maayatah toon o wuuratah"},{"chapter":87,"verse":14,"text":"Malaama oon laaɓɗo e sirku"},{"chapter":87,"verse":15,"text":"O jantii Innde joom makko o juuli"},{"chapter":87,"verse":16,"text":"Ko woni, ko hoɗon ɓurna nguurndam aduna"},{"chapter":87,"verse":17,"text":"Ko laakira ɓuri moƴƴude e heddaade"},{"chapter":87,"verse":18,"text":"ɗum ina e ɗereeji gadiiɗi"},{"chapter":87,"verse":19,"text":"ɗereeji Ibraahiima e Muusa"}]}